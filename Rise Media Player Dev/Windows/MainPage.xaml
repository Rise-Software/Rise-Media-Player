<Page
    x:Class="Rise.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:conv="using:Rise.App.Converters"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    xmlns:local="using:Rise.App.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <conv:BooleanToVisibility x:Key="BoolToVis" />
            <conv:ResourceToString x:Key="StrToRes" />

            <!-- This top margin is the height of the custom TitleBar -->
            <Thickness x:Key="NavigationViewContentMargin">0,48,0,0</Thickness>
            <Thickness x:Key="NavigationViewHeaderMargin">0,0,0,0</Thickness>

            <MenuFlyout x:Key="NavViewItemFlyout" x:Name="NavViewItemFlyout">
                <MenuFlyoutItem x:Name="TopOption"
                                x:Uid="/Information/ToTop"
                                Click="ToTop_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE11C;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:Name="UpOption"
                                x:Uid="/Information/MoveUp"
                                Click="MoveUp_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE010;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:Name="DownOption"
                                x:Uid="/Information/MoveDown"
                                Click="MoveDown_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE011;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:Name="BottomOption"
                                x:Uid="/Information/ToBottom"
                                Click="ToBottom_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE118;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator />

                <MenuFlyoutItem x:Uid="/Information/Remove"
                                Click="HideItem_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE77A;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:Uid="/Information/RemoveSection"
                                Click="HideSection_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xECC9;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>

            <MenuFlyout x:Key="NavViewLightItemFlyout" x:Name="NavViewLightItemFlyout">
                <MenuFlyoutItem x:Uid="/Information/Remove"
                                Click="HideItem_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE77A;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>

            <local:MenuItemTemplateSelector x:Key="NavViewItem">
                <local:MenuItemTemplateSelector.GlyphTemplate>
                    <DataTemplate x:DataType="viewmodels:NavViewItemViewModel">
                        <muxc:NavigationViewItem Content="{x:Bind LabelResource, Converter={StaticResource StrToRes}, ConverterParameter=Sidebar}"
                                                 Tag="{x:Bind Tag}"
                                                 Visibility="{x:Bind Visible, Mode=TwoWay, Converter={StaticResource BoolToVis}}">
                            <muxc:NavigationViewItem.Icon>
                                <FontIcon Glyph="{x:Bind Icon, Mode=OneWay}" />
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                    </DataTemplate>
                </local:MenuItemTemplateSelector.GlyphTemplate>

                <local:MenuItemTemplateSelector.ImageTemplate>
                    <DataTemplate x:DataType="viewmodels:NavViewItemViewModel">
                        <muxc:NavigationViewItem Content="{x:Bind LabelResource, Converter={StaticResource StrToRes}, ConverterParameter=Sidebar}"
                                                 Tag="{x:Bind Tag}"
                                                 Visibility="{x:Bind Visible, Mode=TwoWay, Converter={StaticResource BoolToVis}}">
                            <muxc:NavigationViewItem.Icon>
                                <muxc:ImageIcon Source="{x:Bind Icon, Mode=OneWay}" />
                            </muxc:NavigationViewItem.Icon>
                        </muxc:NavigationViewItem>
                    </DataTemplate>
                </local:MenuItemTemplateSelector.ImageTemplate>

                <local:MenuItemTemplateSelector.HeaderTemplate>
                    <DataTemplate x:DataType="viewmodels:NavViewItemViewModel">
                        <muxc:NavigationViewItemHeader Content="{x:Bind LabelResource, Converter={StaticResource StrToRes}, ConverterParameter=Sidebar}"
                                                       Visibility="{x:Bind Visible, Mode=TwoWay, Converter={StaticResource BoolToVis}}" />
                    </DataTemplate>
                </local:MenuItemTemplateSelector.HeaderTemplate>
            </local:MenuItemTemplateSelector>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="SmallWidth">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="NavView.IsPaneToggleButtonVisible" Value="False" />
                        <Setter Target="NavView.PaneDisplayMode" Value="Left" />
                        <Setter Target="BigSearch.Visibility" Value="Visible" />
                        <Setter Target="SmallSearch.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="SmallHeight">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="600" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="MediaControls.IsCompact" Value="False" />
                        <Setter Target="PlayerElement.Height" Value="120" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid Canvas.ZIndex="1">
            <uc:MicaTitleBar x:Name="AppTitleBar"
                             Canvas.ZIndex="1"
                             AddLabelWidth="800"
                             Height="40"
                             Margin="48,8,0,0"
                             ShowIcon="True"
                             VerticalAlignment="Top" />

            <Grid x:Name="ControlsPanel"
                  x:FieldModifier="public"
                  Canvas.ZIndex="2"
                  ColumnSpacing="8"
                  Height="32"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AutoSuggestBox x:Name="BigSearch"
                                x:Uid="/Information/BigSearch"
                                AutomationProperties.Name="Search"
                                Height="32"
                                HorizontalAlignment="Stretch"
                                MaxWidth="530"
                                QueryIcon="Find"
                                VerticalAlignment="Top"
                                Visibility="Collapsed" />
                <AutoSuggestBox x:Name="SmallSearch"
                                x:Uid="/Information/SmallSearch"
                                AutomationProperties.Name="Search"
                                Height="32"
                                HorizontalAlignment="Stretch"
                                QueryIcon="Find"
                                VerticalAlignment="Top" />
                <Button x:Uid="/Information/More"
                        Grid.Column="1"
                        Height="32"
                        Style="{StaticResource TransparentButton}"
                        VerticalAlignment="Center">
                    <Button.Content>
                        <FontIcon Glyph="&#xE10C;" />
                    </Button.Content>

                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Uid="/Information/Scan"
                                            Click="StartScan_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE721;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem x:Uid="/Information/Settings"
                                            Click="OpenSettings_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE115;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem x:Uid="/Information/Fdb"
                                            Click="Button_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xED15;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Grid>

        <muxc:NavigationView x:Name="NavView"
                             x:FieldModifier="public"
                             Canvas.ZIndex="0"
                             BackRequested="NavView_BackRequested"
                             CompactModeThresholdWidth="800"
                             DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
                             ExpandedModeThresholdWidth="800"
                             IsBackEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
                             IsPaneToggleButtonVisible="True"
                             IsSettingsVisible="False"
                             IsTitleBarAutoPaddingEnabled="False"
                             ItemInvoked="NavView_ItemInvoked"
                             MenuItemTemplateSelector="{StaticResource NavViewItem}"
                             OpenPaneLength="260"
                             PaneDisplayMode="LeftMinimal"
                             RightTapped="NavView_RightTapped">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <muxc:BreadcrumbBar x:Name="CrumbsHeader"
                                    x:FieldModifier="public"
                                    Grid.Row="0"
                                    ItemsSource="{x:Bind Breadcrumbs}"
                                    Margin="56,48,56,0">
                    <muxc:BreadcrumbBar.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" Style="{StaticResource TitleTextBlockStyle}" />
                        </DataTemplate>
                    </muxc:BreadcrumbBar.ItemTemplate>
                </muxc:BreadcrumbBar>

                <Grid Grid.Row="1">
                    <Frame x:Name="ContentFrame"
                           x:FieldModifier="public"
                           Navigated="ContentFrame_Navigated"
                           Padding="56,0">
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <NavigationThemeTransition />
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>

                    <MediaPlayerElement x:Name="PlayerElement"
                                        AreTransportControlsEnabled="True"
                                        Height="120"
                                        Margin="44,0"
                                        VerticalAlignment="Bottom"
                                        Visibility="Visible">
                        <MediaPlayerElement.TransportControls>
                            <MediaTransportControls x:Name="MediaControls"
                                                    IsFastForwardButtonVisible="False"
                                                    IsFastForwardEnabled="False"
                                                    IsFastRewindButtonVisible="False"
                                                    IsFastRewindEnabled="False"
                                                    IsPlaybackRateButtonVisible="True"
                                                    IsPlaybackRateEnabled="True"
                                                    IsFullWindowButtonVisible="False"
                                                    IsFullWindowEnabled="False"
                                                    IsZoomButtonVisible="False"
                                                    IsRepeatButtonVisible="True"
                                                    IsRepeatEnabled="True"
                                                    IsSkipBackwardButtonVisible="False"
                                                    IsSkipForwardButtonVisible="False"
                                                    IsCompact="False"
                                                    IsSeekBarVisible="True"
                                                    IsSeekEnabled="True"
                                                    IsNextTrackButtonVisible="True"
                                                    IsPreviousTrackButtonVisible="True"
                                                    ShowAndHideAutomatically="False" />
                        </MediaPlayerElement.TransportControls>
                    </MediaPlayerElement>
                </Grid>
            </Grid>
        </muxc:NavigationView>

        <muxc:TeachingTip x:Name="IndexingTip"
                          x:Uid="/Information/Indexing"
                          x:FieldModifier="public"
                          PlacementMargin="0,24,-26,0"
                          PreferredPlacement="TopRight">
            <muxc:TeachingTip.IconSource>
                <muxc:FontIconSource Glyph="&#xEA69;" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>

        <muxc:TeachingTip x:Name="AddedTip"
                          x:Uid="/Information/Added"
                          x:FieldModifier="public"
                          PlacementMargin="0,24,-26,0"
                          PreferredPlacement="TopRight">
            <muxc:TeachingTip.IconSource>
                <muxc:FontIconSource Glyph="&#xE73E;" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>

        <muxc:TeachingTip x:Name="CheckTip"
                          x:Uid="/Information/Check"
                          x:FieldModifier="public"
                          PlacementMargin="0,24,-26,0"
                          PreferredPlacement="TopRight">
            <muxc:TeachingTip.IconSource>
                <muxc:FontIconSource Glyph="&#xF16A;" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>

        <muxc:TeachingTip x:Name="NoNewTip"
                          x:Uid="/Information/NoNew"
                          x:FieldModifier="public"
                          PlacementMargin="0,24,-26,0"
                          PreferredPlacement="TopRight">
            <muxc:TeachingTip.IconSource>
                <muxc:FontIconSource Glyph="&#xE8F1;" />
            </muxc:TeachingTip.IconSource>
        </muxc:TeachingTip>
    </Grid>
</Page>
