<Page
    x:Class="Rise.App.Views.VideoPlaybackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:PlaybackViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="TopGrid"
              Canvas.ZIndex="1"
              Background="{ThemeResource SystemControlAcrylicElementBrush}"
              Height="32"
              VerticalAlignment="Top">
            <Grid.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.Transitions>

            <Button x:Name="BackButton"
                    Command="{x:Bind _navigationHelper.GoBackCommand}"
                    CornerRadius="0"
                    Height="32"
                    Style="{StaticResource TransparentButton}"
                    Width="40"
                    VerticalAlignment="Center"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button">
                <FontIcon FontSize="14" Glyph="&#xE112;" />
            </Button>

            <uc:MicaTitleBar x:Name="AppTitleBar"
                             Canvas.ZIndex="1"
                             AddLabelWidth="0"
                             Height="32"
                             Icon="ms-appx:///Assets/NavigationView/LocalVideosPage/Colorful.png"
                             Margin="48,0,0,0"
                             ShowIcon="True"
                             Title="{x:Bind CurrentVideo.Title, Mode=OneWay}" />
        </Grid>

        <MediaPlayerElement x:Name="PlayerElement"
                            animations:Connected.Key="Player"
                            Canvas.ZIndex="0"
                            AreTransportControlsEnabled="True"
                            Visibility="Visible">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls x:Name="MediaControls"
                                        IsFastForwardButtonVisible="False"
                                        IsFastForwardEnabled="False"
                                        IsFastRewindButtonVisible="False"
                                        IsFastRewindEnabled="False"
                                        IsPlaybackRateButtonVisible="True"
                                        IsPlaybackRateEnabled="True"
                                        IsFullWindowButtonVisible="True"
                                        IsFullWindowEnabled="True"
                                        IsZoomButtonVisible="False"
                                        IsRepeatButtonVisible="True"
                                        IsRepeatEnabled="True"
                                        IsSkipBackwardButtonVisible="True"
                                        IsSkipForwardButtonVisible="True"
                                        IsSkipBackwardEnabled="True"
                                        IsSkipForwardEnabled="True"
                                        IsCompact="False"
                                        IsSeekBarVisible="True"
                                        IsSeekEnabled="True"
                                        IsNextTrackButtonVisible="False"
                                        IsPreviousTrackButtonVisible="False" />
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
    </Grid>
</Page>
