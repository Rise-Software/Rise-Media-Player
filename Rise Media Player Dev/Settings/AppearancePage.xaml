<Page
    x:Class="Rise.App.Settings.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="4">
        <TextBlock x:Uid="/Appearance/DesignPresetsH" Margin="0,-10,0,0" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/DesignUnavailable"
                               ExpanderStyle="Disabled"
                               Icon="&#xE946;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.CompactMode, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/ChooseTheme"
                               ExpanderStyle="Static"
                               Padding="0,10,0,0"
                               Icon="&#xE790;">
            <ComboBox ItemsSource="{x:Bind Themes}"
                      PlaceholderText="Use system setting"
                      SelectedIndex="{x:Bind ViewModel.Theme, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/ChooseColor"
                            Icon="&#xE771;"
                            x:Name="ChooseColorExpander">

            <uc:ExpanderControl.HeaderControls>
                <ComboBox ItemsSource="{x:Bind ColorThemes}"
                          PlaceholderText="No tint"
                          x:Name="ColorThemeComboBox"
                          SelectionChanged="ColorThemeComboBox_SelectionChanged"
                          RelativePanel.AlignRightWithPanel="True"
                          SelectedIndex="{x:Bind ViewModel.ColorTheme, Mode=TwoWay}" />
            </uc:ExpanderControl.HeaderControls>

            <StackPanel>
                <TextBlock FontSize="14" FontWeight="Normal" Text="Recent colours" Padding="30,0,150,0"/>
                <TextBlock FontSize="14" FontWeight="SemiBold" Text="Coming soon" Padding="30,0,150,0"/>
                <TextBlock FontSize="14" FontWeight="Normal" Text="Windows colours" Padding="30,20,150,0"/>
                <controls:WrapPanel x:Name="RiseColorsPanel" HorizontalSpacing="3" VerticalSpacing="3" Padding="30,5,150,5">
                    <Border ToolTipService.ToolTip="Rise Red" Background="#FFB900" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Rise Violet" Background="#FF8C00" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Rise Green" Background="#F7630C" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Rise Blue" Background="#CA5010" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Rise Gold" Background="#DA3B01" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Cyan" Background="#EF6950" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Plum light" Background="#D13438" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Turf green" Background="#FF4343" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Purple shadow dark" Background="#E74856" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Meadow green" Background="#E81123" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Pale red" Background="#EA005E" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Mint dark" Background="#C30052" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Red" Background="#E3008C" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Steel blue" Background="#BF0077" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#C239B3" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#9A0089" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#0078D4" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#0063B1" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#8E8CD8" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#6B69D6" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#8764B8" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#744DA9" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#B146C2" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#881798" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#0099BC" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#2D7D9A" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#00B7C3" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#038387" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#00B294" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#018574" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#00CC6A" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#10893E" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#7A7574" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#5D5A58" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#68768A" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#515C6B" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#567C73" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#486860" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#498205" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#107C10" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#767676" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#4C4A48" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#69797E" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#4A5459" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#647C64" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#525E54" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#847545" Width="50" Height="50" CornerRadius="5" />
                    <Border ToolTipService.ToolTip="Iris Spring" Background="#7E735F" Width="50" Height="50" CornerRadius="5" />
                </controls:WrapPanel>
                <Rectangle Fill="{ThemeResource ExpanderHeaderBorderBrush}"
                           Height="1"
                           HorizontalAlignment="Stretch"
                           Margin="-16,20,-16,0" />
                <TextBlock FontSize="14" FontWeight="Normal" Text="Customised colours" Padding="30,16,150,0"/>
                <Button HorizontalAlignment="right" Margin="0,-25,0,0"  Content="View colours"/>
                <Rectangle Fill="{ThemeResource ExpanderHeaderBorderBrush}"
                           Height="1"
                           HorizontalAlignment="Stretch"
                           Margin="-16,10,-16,0" />
            </StackPanel>




        </uc:ExpanderControl>

        <TextBlock x:Uid="/Appearance/NavigationH" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/Startup"
                            ExpanderStyle="Static"
                            Icon="&#xE7E8;">
            <ComboBox ItemsSource="{x:Bind Startup}"
                      PlaceholderText="Songs"
                      SelectedIndex="{x:Bind ViewModel.OpenTo, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/PickUp"
                               ExpanderStyle="Static"
                               Icon="&#xE126;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.PickUp, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/CompactMode"
                               ExpanderStyle="Disabled"
                               Icon="&#xE73F;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.CompactMode, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/SidebarItems"
                               Click="SidebarCustomize_Click"
                               ExpanderStyle="Button"
                               Icon="&#xE9D5;">
            <FontIcon Glyph="&#xE00F;" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Playback/NowPlaying"
                               ExpanderStyle="Disabled"
                               Icon="&#xE102;">
            <FontIcon FontSize="16"
                      Glyph="&#xE00F;" />
        </uc:ExpanderControl>




    </StackPanel>
</Page>
