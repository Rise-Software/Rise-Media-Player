                </controls:WrapPanel>
                <StackPanel x:Name="TheRest" Visibility="Collapsed">
                    <Rectangle
                        Height="1"
                        Margin="-16,20,-16,0"
                        HorizontalAlignment="Stretch"
                        Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
                    <TextBlock
                        Padding="30,16,150,0"
                        FontSize="14"
                        FontWeight="Normal"
                        Text="Customised colours" />
                    <Button
                        Margin="0,-25,0,0"
                        HorizontalAlignment="right"
                        Content="View colours" />
                </StackPanel>
            </StackPanel>
        </uc:ExpanderControl>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CustomGlazeStates">
                <VisualState x:Name="CustomGlazeDisabled" />
                <VisualState x:Name="CustomGlazeEnabled">
                    <VisualState.Setters>
                        <Setter Target="Nothing.Visibility" Value="Collapsed" />
                        <Setter Target="TextForGlaze.Visibility" Value="Visible" />
                        <Setter Target="RiseColorsPanel.Visibility" Value="Visible" />
                        <Setter Target="TheRest.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
