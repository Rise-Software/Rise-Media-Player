<Page
    x:Class="Rise.App.Settings.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="4">
        <TextBlock x:Uid="/Appearance/DesignPresetsH" Margin="0,-10,0,0" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/DesignUnavailable"
                               ExpanderStyle="Disabled"
                               Icon="&#xE946;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.CompactMode, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <TextBlock x:Uid="/Appearance/AppearanceH" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/ChooseTheme"
                               ExpanderStyle="Static"
                               Icon="&#xE790;">
            <ComboBox ItemsSource="{x:Bind Themes}"
                      PlaceholderText="Use system setting"
                      SelectedIndex="{x:Bind ViewModel.Theme, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/ChooseColor"
                            Icon="&#xE771;"
                            x:Name="ChooseColorExpander">

            <uc:ExpanderControl.HeaderControls>
                <ComboBox ItemsSource="{x:Bind ColorThemes}"
                          PlaceholderText="No tint"
                          x:Name="ColorThemeComboBox"
                          SelectionChanged="ColorThemeComboBox_SelectionChanged"
                          RelativePanel.AlignRightWithPanel="True"
                          SelectedIndex="{x:Bind ViewModel.ColorTheme, Mode=TwoWay}" />
            </uc:ExpanderControl.HeaderControls>

            <controls:WrapPanel x:Name="RiseColorsPanel" HorizontalSpacing="8" VerticalSpacing="8">
                <Border ToolTipService.ToolTip="Rise Red" Background="IndianRed" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Rise Violet" Background="BlueViolet" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Rise Green" Background="DarkSeaGreen" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Rise Blue" Background="CornflowerBlue" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Rise Gold" Background="Goldenrod" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Cyan" Background="#00B7C3" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Plum light" Background="#BF0077" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Turf green" Background="#00CC6A" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Purple shadow dark" Background="#6B69D6" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Meadow green" Background="#498205" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Pale red" Background="#E74856" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Mint dark" Background="#018574" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Red" Background="#E81123" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Steel blue" Background="#68768A" Width="40" Height="40" CornerRadius="4" />
                <Border ToolTipService.ToolTip="Iris Spring" Background="#744DA9" Width="40" Height="40" CornerRadius="4" />
            </controls:WrapPanel>
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/FullArt"
                            ExpanderStyle="Disabled"
                            Icon="&#xE93C;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.SquareAlbumArt, Mode=TwoWay}" />
        </uc:ExpanderControl>


        <TextBlock x:Uid="/Appearance/NavigationH" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/Startup"
                            ExpanderStyle="Static"
                            Icon="&#xE7E8;">
            <ComboBox ItemsSource="{x:Bind Startup}"
                      PlaceholderText="Songs"
                      SelectedIndex="{x:Bind ViewModel.OpenTo, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/PickUp"
                               ExpanderStyle="Static"
                               Icon="&#xE126;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.PickUp, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/CompactMode"
                               ExpanderStyle="Disabled"
                               Icon="&#xE73F;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.CompactMode, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/SidebarItems"
                               Click="SidebarCustomize_Click"
                               ExpanderStyle="Button"
                               Icon="&#xE9D5;">
            <FontIcon Glyph="&#xE00F;" />
        </uc:ExpanderControl>


        <TextBlock x:Uid="/Appearance/PrivacyH" Style="{StaticResource Subheader}" />
        <uc:ExpanderControl x:Uid="/Appearance/History"
                               ExpanderStyle="Disabled"
                               Icon="&#xEADF;"
                               Margin="0,0,0,4">
            <ToggleSwitch IsOn="{x:Bind ViewModel.TrackHistory, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/CuratedPlaylists"
                               ExpanderStyle="Disabled"
                               Icon="&#xE8FD;">
            <ToggleSwitch IsOn="{x:Bind ViewModel.CuratedPlaylists, Mode=TwoWay}" />
        </uc:ExpanderControl>

        <uc:ExpanderControl x:Uid="/Appearance/AtAGlance"
                               ExpanderStyle="Disabled"
                               Icon="&#xECA5;">
            <FontIcon Glyph="&#xE00F;" />
        </uc:ExpanderControl>
    </StackPanel>
</Page>
