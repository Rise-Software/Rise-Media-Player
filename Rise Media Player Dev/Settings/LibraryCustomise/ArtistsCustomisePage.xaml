<Page
    x:Class="Rise.App.Settings.LibraryCustomise.ArtistsCustomisePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="using:Rise.Common.Extensions.Markup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Border Style="{StaticResource SettingsCard}">
                <StackPanel Orientation="Horizontal">
                    <Image MaxHeight="64" Source="ms-appx:///Assets/Settings/LibraryCustomise/widgettoptrackpreview.png" />
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Margin="8,0,0,0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{markup:ResourceHelper Name=TopTracks}" />
                        <TextBlock
                            Width="300"
                            Margin="8,0,0,0"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{markup:ResourceHelper Name=TopTracksDesc}"
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
