<ContentDialog
    x:Class="Rise.App.Dialogs.VideoStreamingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Play video from URL"
    CloseButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
    PrimaryButtonText="Play video"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <StackPanel Width="300" Spacing="6">
        <TextBox x:Name="StreamingTextBox" Header="URL" />
        <TextBlock FontSize="13" TextWrapping="Wrap">
            Examples of links include:<LineBreak />
            https://www.example.com/video.mp4<LineBreak />
            https://www.youtube.com/watch?v=p7YXXieghto
        </TextBlock>
        <TextBlock
            x:Name="InvalidUrlText"
            FontSize="13"
            Text="Invalid URL."
            TextWrapping="Wrap"
            Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
