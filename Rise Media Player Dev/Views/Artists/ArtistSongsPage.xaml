<Page
    x:Class="Rise.App.Views.ArtistSongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converters="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    x:Name="Root"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:Height="760"
    d:Width="500"
    Loaded="Root_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <converters:NullToBoolean x:Key="NullToBool" />
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer Padding="44,44,44,0" d:Padding="12">
        <Grid>
            <muxc:TeachingTip
                x:Name="DiscyOnSong"
                Title="Taking action on songs"
                ActionButtonContent="Learn more"
                CloseButtonContent="Got it!"
                IsLightDismissEnabled="True"
                PlacementMargin="20"
                PreferredPlacement="Auto"
                Subtitle="Hover over a song and click the play button to play a song, or double click. Skip, go back and view song info from the now playing bar (at the bottom of your app window). Click 'Info and Properties' to edit song metadata and file information. You can always share to others or add to a playlist too!">
                <muxc:TeachingTip.HeroContent>
                    <Image Source="/Assets/Branding/discygraphic.png" />
                </muxc:TeachingTip.HeroContent>
            </muxc:TeachingTip>

            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="230" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border
                    Margin="0,0,0,16"
                    BorderThickness="1"
                    CornerRadius="8"
                    Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid Margin="-16" CornerRadius="8">
                            <ParallaxView
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalShift="0"
                                Source="{x:Bind MainList}"
                                VerticalShift="500">
                                <Image
                                    Opacity="0.6"
                                    Source="{x:Bind SelectedArtist.Picture, Mode=OneWay}"
                                    Stretch="UniformToFill" />
                            </ParallaxView>
                        </Grid>

                        <Grid Margin="-16">
                            <Grid.Background>
                                <media:BackdropBlurBrush Amount="35" />
                            </Grid.Background>

                            <Grid
                                Margin="16"
                                Padding="16"
                                ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="172" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Padding="-1"
                                    CornerRadius="250"
                                    IsHitTestVisible="False">
                                    <Border animations:Connected.Key="ArtistArt" CornerRadius="250">
                                        <Image
                                            Width="172"
                                            Height="172"
                                            Source="{x:Bind SelectedArtist.Picture, Mode=OneWay}"
                                            Stretch="UniformToFill" />
                                    </Border>
                                </Button>

                                <StackPanel
                                    Grid.Column="1"
                                    Padding="0,10,0,0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Spacing="8">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel>
                                            <TextBlock
                                                x:Name="ArtistName"
                                                x:FieldModifier="public"
                                                FontSize="36"
                                                MaxLines="1"
                                                Style="{StaticResource TitleTextBlockStyle}"
                                                Text="{x:Bind SelectedArtist.Name, Mode=OneWay}" />
                                            <TextBlock
                                                x:Name="SongAlbums"
                                                Margin="0,0,0,8"
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                Opacity="0.6"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind Mode=OneWay, Path=SelectedArtist.SongsNAlbums}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    x:Name="NoListeners"
                                                    Margin="0,0,0,0"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Opacity="0.6"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind GetMonthlyListeners(SelectedArtist.Name), Mode=OneWay}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>


                                    <CommandBar
                                        Margin="-12,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Background="Transparent"
                                        DefaultLabelPosition="Right">
                                        <AppBarButton
                                            x:Name="PlayItem"
                                            Click="PlayButton_Click"
                                            Icon="Play"
                                            Label="Play all"
                                            ToolTipService.ToolTip="Play all" />

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Name="ShuffleItem"
                                            x:Uid="/Information/Shuffle"
                                            Click="ShuffleButton_Click"
                                            Icon="Shuffle" />
                                        <AppBarButton
                                            x:Uid="/Information/Add"
                                            IsCompact="True"
                                            IsEnabled="True">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xECC8;" />
                                            </AppBarButton.Icon>

                                            <AppBarButton.Flyout>
                                                <MenuFlyout x:Name="AddToCommand" />
                                            </AppBarButton.Flyout>
                                        </AppBarButton>

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Name="CustomisePage"
                                            x:Uid="/Information/EditArtist"
                                            Click="CustomisePage_Click"
                                            Icon="Edit" />
                                    </CommandBar>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <Grid
                    x:Name="LastFMClickables"
                    Grid.Row="1"
                    ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        x:Name="TopSongs"
                        Height="200"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE734;" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="Top tracks" />
                                </StackPanel>

                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
                                <ListView Margin="-10,-4,-10,-4"
                                    x:Name="TopTracksLis" 
                                    Height="130">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center"
                                                Orientation="Horizontal" 
                                                Margin="0"
                                                BorderThickness="0"
                                                Padding="0,10,0,10">
                                                <Button IsHitTestVisible="False" CornerRadius="7" Margin="0,0,12,0" Padding="0">
                                                    <Image
                                                    Source="{Binding Image}"
                                                    Margin="0,0,0,0" 
                                                    Height="32"
                                                    Width="32"/>
                                                </Button>
                                                
                                                <RelativePanel VerticalAlignment="Center">
                                                    <TextBlock
                                                        x:Name="Topsongtitle"
                                                        Text="{Binding SongName}"
                                                        FontWeight="Normal"
                                                        FontSize="14" />
                                                    <TextBlock
                                                        x:Name="Album"
                                                        RelativePanel.RightOf="Topsongtitle"
                                                        Margin="12,0,0,0"
                                                        Text="{Binding ArtistName}"
                                                        FontWeight="SemiBold"/>
                                                </RelativePanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border
                        x:Name="MusicVideos"
                        Grid.Column="1"
                        Height="200"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE786;" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="Music videos" />
                                </StackPanel>
                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
                            </StackPanel>
                            <TextBlock
                                Margin="0,36,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Opacity="0.6"
                                Text="Coming soon" />
                        </Grid>
                    </Border>
                </Grid>

                <Border
                    x:Name="Discography"
                    Grid.Row="2"
                    CornerRadius="5"
                    Style="{StaticResource SettingsCard}">
                    <Grid>
                        <CommandBar
                            Margin="0,-14,-12,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            DefaultLabelPosition="Right">
                            <AppBarButton
                                x:Name="UpDown"
                                Click="UpDown_Click"
                                Label="Collapse">
                                <AppBarButton.Icon>
                                    <FontIcon x:Name="UpDownIcon" Glyph="&#xE010;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton
                                x:Name="SortButton"
                                Icon="Sort"
                                Label="Sort by:">
                                <AppBarButton.Flyout>
                                    <MenuFlyout>
                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Track"
                                            Click="SortFlyoutItem_Click"
                                            Tag="Track" />
                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Title"
                                            Click="SortFlyoutItem_Click"
                                            IsChecked="True"
                                            Tag="Title" />
                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Genre"
                                            Click="SortFlyoutItem_Click"
                                            Tag="Genres" />
                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Year"
                                            Click="SortFlyoutItem_Click"
                                            Tag="Year" />

                                        <MenuFlyoutSeparator />

                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Ascending"
                                            Click="SortFlyoutItem_Click"
                                            GroupName="Descending"
                                            IsChecked="True"
                                            Tag="Ascending" />
                                        <muxc:RadioMenuFlyoutItem
                                            x:Uid="/Information/Descending"
                                            Click="SortFlyoutItem_Click"
                                            GroupName="Descending"
                                            Tag="Descending" />
                                    </MenuFlyout>
                                </AppBarButton.Flyout>
                            </AppBarButton>
                        </CommandBar>

                        <StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE93C;" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    FontWeight="SemiBold"
                                    Text="Discography" />
                            </StackPanel>

                            <Rectangle
                                Height="1"
                                Margin="-16,12,-16,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                            <muxc:NavigationView
                                Margin="-4,0,0,0"
                                IsBackButtonVisible="Collapsed"
                                IsSettingsVisible="False"
                                ItemInvoked="NavigationView_ItemInvoked"
                                PaneDisplayMode="Top"
                                SelectedItem="{x:Bind AlbumsItem}">
                                <muxc:NavigationView.Resources>
                                    <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                                    <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                                </muxc:NavigationView.Resources>
                                <muxc:NavigationView.MenuItems>
                                    <muxc:NavigationViewItem x:Name="SongsItem" Content="Albums" />
                                    <muxc:NavigationViewItem x:Name="AlbumsItem" Content="All songs" />
                                </muxc:NavigationView.MenuItems>
                            </muxc:NavigationView>

                            <Grid>
                                <GridView
                                    x:Name="AlbumsGrid"
                                    MaxHeight="400"
                                    Margin="0,0,0,-8"
                                    ItemsSource="{x:Bind Albums}"
                                    RightTapped="MainGrid_RightTapped"
                                    SelectionMode="Single"
                                    Tapped="GridView_Tapped"
                                    Visibility="Collapsed">
                                    <GridView.Resources>
                                        <MenuFlyout x:Key="AlbumFlyout" x:Name="AlbumFlyout">
                                            <MenuFlyoutItem
                                                x:Name="PlayAlbumButton"
                                                x:Uid="/Information/PlayItem"
                                                Click="PlayAlbumButton_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE102;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem
                                                x:Name="ShuffleAlbumButton"
                                                x:Uid="/Information/ShuffleAlbum"
                                                Click="ShuffleAlbumButton_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE14B;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <!--<MenuFlyoutSubItem
                                                    x:Name="AddTo"
                                                    x:Uid="/Information/AddTo"
                                                    IsEnabled="True">
                                                <MenuFlyoutSubItem.Icon>
                                                    <FontIcon Glyph="&#xECC8;" />
                                                </MenuFlyoutSubItem.Icon>
                                            </MenuFlyoutSubItem>-->

                                            <MenuFlyoutItem
                                                x:Name="ShareAlbum"
                                                x:Uid="/Information/Share"
                                                IsEnabled="False">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72D;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <!--<MenuFlyoutItem
                                                    x:Name="AskDiscyAlbum"
                                                    x:Uid="/Information/AskDiscy"
                                                    Click="AskDiscy_Click"
                                                    IsEnabled="True">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE11B;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>-->

                                            <MenuFlyoutItem
                                                x:Name="RemoveAlbum"
                                                x:Uid="/Information/RemoveThing"
                                                IsEnabled="False">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE107;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>


                                            <MenuFlyoutItem
                                                x:Name="PropsAlbum"
                                                x:Uid="/MediaData/Properties"
                                                Click="PropsAlbum_Click"
                                                IsEnabled="True">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE104;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                        </MenuFlyout>
                                    </GridView.Resources>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="viewmodels:AlbumViewModel">
                                            <StackPanel
                                                Width="134"
                                                Margin="12"
                                                Orientation="Vertical"
                                                Spacing="2">
                                                <Border x:Name="ItemThumbnail" CornerRadius="4">
                                                    <Image
                                                        Width="134"
                                                        Height="134"
                                                        Stretch="UniformToFill">
                                                        <Image.Source>
                                                            <BitmapImage
                                                                DecodePixelHeight="134"
                                                                DecodePixelWidth="134"
                                                                UriSource="{x:Bind Thumbnail}" />
                                                        </Image.Source>
                                                    </Image>
                                                </Border>

                                                <TextBlock
                                                    Padding="0,7,0,0"
                                                    MaxLines="1"
                                                    Style="{StaticResource BaseTextBlockStyle}"
                                                    Text="{x:Bind Title}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Padding="0,0,0,0"
                                                    MaxLines="1"
                                                    Text="{x:Bind Year}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>

                                <ListView
                                    x:Name="MainList"
                                    MaxHeight="400"
                                    Margin="-56,0"
                                    Padding="44,0,44,0"
                                    DoubleTapped="MainList_DoubleTapped"
                                    IsDoubleTapEnabled="True"
                                    ItemsSource="{x:Bind Songs}"
                                    PointerWheelChanged="MainList_PointerWheelChanged"
                                    RightTapped="MainList_RightTapped"
                                    SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
                                    SelectionMode="Single"
                                    Visibility="Visible">
                                    <ListView.Resources>
                                        <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                                            <MenuFlyoutItem x:Uid="/Information/PlayItem" Click="PlayButton_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE102;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem x:Uid="/Information/ShowAlbum" Click="ShowAlbum_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE93C;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />


                                            <MenuFlyoutSubItem
                                                x:Name="AddTo"
                                                x:Uid="/Information/AddTo"
                                                IsEnabled="True">
                                                <MenuFlyoutSubItem.Icon>
                                                    <FontIcon Glyph="&#xECC8;" />
                                                </MenuFlyoutSubItem.Icon>
                                            </MenuFlyoutSubItem>

                                            <MenuFlyoutItem
                                                x:Name="Share"
                                                x:Uid="/Information/Share"
                                                IsEnabled="False">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE72D;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <MenuFlyoutItem
                                                x:Name="AskDiscy"
                                                x:Uid="/Information/AskDiscy"
                                                Click="AskDiscy_Click"
                                                IsEnabled="True">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE11B;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem
                                                x:Name="ShowinFE"
                                                x:Uid="/Information/ShowinFE"
                                                Click="ShowinFE_Click"
                                                IsEnabled="True">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xEC50;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>


                                            <MenuFlyoutSeparator />

                                            <MenuFlyoutItem
                                                x:Name="Remove"
                                                x:Uid="/Information/RemoveThing"
                                                IsEnabled="False">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE107;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem
                                                x:Name="Props"
                                                x:Uid="/MediaData/Properties"
                                                Click="Props_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE104;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                        </MenuFlyout>
                                    </ListView.Resources>

                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="viewmodels:SongViewModel">

                                            <Grid
                                                Padding="0,4"
                                                Background="Transparent"
                                                ColumnSpacing="12"
                                                PointerCanceled="Grid_PointerExited"
                                                PointerEntered="Grid_PointerEntered"
                                                PointerExited="Grid_PointerExited">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>



                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        x:Uid="/Information/Play"
                                                        Width="36"
                                                        Height="36"
                                                        Margin="2,0,-28,0"
                                                        Padding="0"
                                                        Click="PlayButton_Click"
                                                        Style="{StaticResource TransparentButtonStyle}"
                                                        Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                                        <FontIcon FontSize="16" Glyph="&#xE102;" />
                                                    </Button>
                                                </StackPanel>

                                                <Button
                                                    Grid.Column="1"
                                                    Width="32"
                                                    Height="32"
                                                    Margin="-8"
                                                    Padding="0"
                                                    CornerRadius="7"
                                                    IsHitTestVisible="False"
                                                    Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}">
                                                    <Border
                                                        x:Name="AlbumThumb"
                                                        Width="32"
                                                        Height="32"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        CornerRadius="3">
                                                        <Image Width="32" Height="32">
                                                            <Image.Source>
                                                                <BitmapImage
                                                                    DecodePixelHeight="32"
                                                                    DecodePixelWidth="32"
                                                                    UriSource="{x:Bind Thumbnail}" />
                                                            </Image.Source>
                                                        </Image>
                                                    </Border>
                                                </Button>

                                                <RelativePanel
                                                    Grid.Column="2"
                                                    Margin="-8,0,0,0"
                                                    VerticalAlignment="Center">
                                                    <TextBlock
                                                        x:Name="songtitle"
                                                        MaxLines="2"
                                                        Text="{x:Bind Title}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="WrapWholeWords" />
                                                    <TextBlock
                                                        Margin="16,0,0,0"
                                                        RelativePanel.RightOf="songtitle"
                                                        TextTrimming="CharacterEllipsis">
                                                        <Hyperlink
                                                            Click="Album_Click"
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            UnderlineStyle="None">
                                                            <Run Text="{x:Bind Album, Mode=OneWay}" />
                                                        </Hyperlink>
                                                    </TextBlock>


                                                </RelativePanel>
                                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                    <Button
                                                        x:Name="PropsHover"
                                                        x:Uid="/Information/Props"
                                                        Width="36"
                                                        Height="36"
                                                        Padding="0"
                                                        Click="PropsHover_Click"
                                                        Style="{StaticResource TransparentButtonStyle}"
                                                        Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                                        <FontIcon FontSize="16" Glyph="&#xE104;" />
                                                    </Button>
                                                    <Button
                                                        x:Uid="/Information/Like"
                                                        Width="36"
                                                        Height="36"
                                                        Padding="0"
                                                        Style="{StaticResource TransparentButtonStyle}"
                                                        Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                                        <FontIcon FontSize="16" Glyph="&#xE006;" />
                                                    </Button>
                                                    <TextBlock
                                                        Margin="12"
                                                        VerticalAlignment="Center"
                                                        Text="{x:Bind Length, Converter={StaticResource TimeToStr}}"
                                                        Visibility="{x:Bind IsDurationVisible, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                                                </StackPanel>

                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border
                    x:Name="ArtistAbout"
                    Grid.Row="3"
                    Margin="0,12,0,135"
                    CornerRadius="5"
                    Style="{StaticResource SettingsCard}">
                    <Grid>
                        <StackPanel>
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE946;" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    FontWeight="SemiBold"
                                    Text="About" />
                            </StackPanel>

                            <Rectangle
                                Height="1"
                                Margin="-16,12,-16,12"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                            <TextBlock
                                x:Name="AboutArtist"
                                Margin="0,0,0,8"
                                Text="{x:Bind GetArtistInfo(SelectedArtist.Name), Mode=OneWay}"
                                TextWrapping="WrapWholeWords" />
                            <HyperlinkButton
                                x:Name="ReadMoreAbout"
                                Padding="0"
                                Click="ReadMoreAbout_Click"
                                Content="Read more" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
