<Page
    x:Class="Rise.App.Views.FileBrowser.FileBrowserDirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:Rise.App.UserControls.FileBrowser"
    xmlns:vm="using:Rise.App.ViewModels.FileBrowser.Listing"
    Loaded="FileBrowserDirectoryPage_Loaded"
    mc:Ignorable="d">

    <ListView
        Padding="48,8,48,120"
        ItemsSource="{x:Bind ViewModel.ListingViewModel.Sections}"
        SelectionMode="None">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="vm:FileBrowserListingSectionViewModel">
                <uc:FileBrowserListingSectionControl ItemsSource="{x:Bind Items}" SectionName="{x:Bind SectionName}">
                    <uc:FileBrowserListingSectionControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:FileBrowserListingItemViewModel">
                            <Grid DoubleTapped="FileBrowserListingItem_DoubleTapped">
                                <TextBlock Text="{x:Bind Name}" />
                            </Grid>
                        </DataTemplate>
                    </uc:FileBrowserListingSectionControl.ItemTemplate>
                </uc:FileBrowserListingSectionControl>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Page>
