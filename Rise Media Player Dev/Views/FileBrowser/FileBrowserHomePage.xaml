<Page
    x:Class="Rise.App.Views.FileBrowser.FileBrowserHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App.Views.FileBrowser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Rise.App.ViewModels.FileBrowser"
    mc:Ignorable="d">

    <Grid>
        <GridView
            Padding="56,0,56,120"
            IsItemClickEnabled="True"
            ItemClick="GridView_ItemClick"
            ItemsSource="{x:Bind ViewModel.Drives}"
            SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:FileBrowserDriveItemViewModel">
                    <TextBlock
                        Padding="24,8"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Text="{x:Bind Name}" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
