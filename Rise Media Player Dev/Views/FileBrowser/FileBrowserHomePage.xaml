<Page
    x:Class="Rise.App.Views.FileBrowser.FileBrowserHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App.Views.FileBrowser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Rise.App.ViewModels.FileBrowser"
    mc:Ignorable="d">

    <Grid>
        <ListView ItemsSource="{x:Bind ViewModel.Drives}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:FileBrowserDriveItemViewModel">
                    <Grid>
                        <Button Command="{x:Bind OpenDriveCommand}" Content="{x:Bind Name}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
