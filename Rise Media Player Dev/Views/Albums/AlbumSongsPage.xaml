<Page
    x:Class="Rise.App.Views.AlbumSongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converters="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    x:Name="Root"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Root_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:NullToBoolean x:Key="NullToBool" />
    </Page.Resources>

    <Grid>
        <muxc:TeachingTip
            x:Name="DiscyOnSong"
            Title="Taking action on songs"
            ActionButtonContent="Learn more"
            CloseButtonContent="Got it!"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Auto"
            Subtitle="Hover over a song and click the play button to play a song, or double click. Skip, go back and view song info from the now playing bar (at the bottom of your app window). Click 'Info and Properties' to edit song metadata and file information. You can always share to others or add to a playlist too!">
            <muxc:TeachingTip.HeroContent>
                <Image Source="/Assets/Branding/discygraphic.png" />
            </muxc:TeachingTip.HeroContent>
        </muxc:TeachingTip>

        <ListView
            x:Name="MainList"
            Padding="44,44,44,120"
            d:Padding="0"
            DoubleTapped="MainList_DoubleTapped"
            IsDoubleTapEnabled="True"
            ItemsSource="{x:Bind Songs}"
            RightTapped="MainList_RightTapped"
            SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
            SelectionMode="Single">
            <ListView.Resources>
                <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                    <MenuFlyoutItem x:Uid="/Information/PlayItem" Click="PlayButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE102;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShowArtist" Click="ShowArtist_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE125;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutSubItem x:Name="AddTo" x:Uid="/Information/AddTo">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xECC8;" />
                        </MenuFlyoutSubItem.Icon>
                    </MenuFlyoutSubItem>

                    <MenuFlyoutItem
                        x:Name="Share"
                        x:Uid="/Information/Share"
                        IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE72D;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutItem
                        x:Name="AskDiscy"
                        x:Uid="/Information/AskDiscy"
                        Click="AskDiscy_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE11B;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem
                        x:Name="ShowinFE"
                        x:Uid="/Information/ShowinFE"
                        Click="ShowinFE_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xEC50;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutItem
                        x:Name="Remove"
                        x:Uid="/Information/RemoveThing"
                        IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE107;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/MediaData/Properties" Click="Props_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE104;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </ListView.Resources>

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.Header>
                <Border
                    Height="230"
                    Margin="0,0,0,16"
                    BorderThickness="1"
                    CornerRadius="8"
                    Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid Margin="-16" CornerRadius="8">
                            <ParallaxView
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalShift="0"
                                Source="{x:Bind MainList}"
                                VerticalShift="500">
                                <Image
                                    Opacity="0.6"
                                    Source="{x:Bind SelectedAlbum.Thumbnail, Mode=OneWay}"
                                    Stretch="UniformToFill" />
                            </ParallaxView>
                        </Grid>

                        <Grid Margin="-16">
                            <Grid.Background>
                                <media:BackdropBlurBrush Amount="35" />
                            </Grid.Background>

                            <Grid
                                Margin="16"
                                Padding="0"
                                ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="188" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Button
                                    Margin="16,0,0,0"
                                    Padding="-1"
                                    ui:Effects.Shadow="{StaticResource LightShadowBottomOffset}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    IsHitTestVisible="False">
                                    <Border animations:Connected.Key="PlaylistArt" CornerRadius="8">
                                        <Image
                                            Width="172"
                                            Height="172"
                                            Source="{x:Bind SelectedAlbum.Thumbnail, Mode=OneWay}"
                                            Stretch="UniformToFill" />
                                    </Border>
                                </Button>

                                <StackPanel
                                    Grid.Column="1"
                                    Padding="0,10,0,0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Spacing="8">
                                    <RelativePanel>
                                        <StackPanel>
                                            <TextBlock
                                                x:Name="AlbumName"
                                                x:FieldModifier="public"
                                                FontSize="36"
                                                MaxLines="1"
                                                Style="{StaticResource TitleTextBlockStyle}"
                                                Text="{x:Bind SelectedAlbum.Title, Mode=OneWay}" />
                                            <TextBlock Margin="0,0,0,8">
                                                <Hyperlink
                                                    Click="Artist_Click"
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    UnderlineStyle="None">
                                                    <Run Text="{x:Bind SelectedAlbum.Artist, Mode=OneWay}" />
                                                </Hyperlink>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    x:Name="AlbumYear"
                                                    Margin="0,0,0,0"
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind SelectedAlbum.Year, Mode=OneWay}" />
                                                <TextBlock
                                                    x:Name="Pill"
                                                    Margin="4,0,4,0"
                                                    FontSize="18"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Text="•" />
                                                <TextBlock
                                                    x:Name="AlbumGenre"
                                                    Margin="0,0,0,0"
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind SelectedAlbum.Genres, Mode=OneWay}" />
                                                <TextBlock
                                                    x:Name="Pill2"
                                                    Margin="4,0,4,0"
                                                    FontSize="18"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Text="•" />
                                                <TextBlock
                                                    x:Name="TrackCountName"
                                                    Margin="0,0,0,0"
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind SelectedAlbum.TrackCount, Mode=OneWay}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </RelativePanel>


                                    <CommandBar
                                        Margin="-12,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Background="Transparent"
                                        DefaultLabelPosition="Right">
                                        <AppBarButton
                                            x:Name="PlayItem"
                                            Click="PlayButton_Click"
                                            Icon="Play"
                                            Label="Play all"
                                            ToolTipService.ToolTip="Play all" />

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Name="ShuffleItem"
                                            x:Uid="/Information/Shuffle"
                                            Click="ShuffleButton_Click"
                                            Icon="Shuffle" />
                                        <AppBarButton
                                            x:Uid="/Information/Add"
                                            IsCompact="True"
                                            IsEnabled="True">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xECC8;" />
                                            </AppBarButton.Icon>

                                            <AppBarButton.Flyout>
                                                <MenuFlyout x:Name="AddToCommand" />
                                            </AppBarButton.Flyout>
                                        </AppBarButton>

                                        <AppBarSeparator />

                                        <AppBarButton
                                            x:Name="EditAlbum"
                                            Click="EditAlbum_Click"
                                            Icon="Edit"
                                            Label="Info &amp; Properties" />
                                    </CommandBar>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SongViewModel">
                    <Border
                        Margin="-14,2,-10,2"
                        Padding="4,0,4,0"
                        Style="{StaticResource SettingsCard}">
                        <Grid
                            Margin="4,0,0,0"
                            Padding="0,4"
                            Background="Transparent"
                            ColumnSpacing="12"
                            PointerCanceled="Grid_PointerExited"
                            PointerEntered="Grid_PointerEntered"
                            PointerExited="Grid_PointerExited">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="32" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Uid="/Information/Play"
                                    Width="36"
                                    Height="36"
                                    Margin="2,0,-28,0"
                                    Padding="0"
                                    Click="PlayButton_Click"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                    <FontIcon FontSize="16" Glyph="&#xE102;" />
                                </Button>
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="-8"
                                Padding="0"
                                CornerRadius="7"
                                IsHitTestVisible="False"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}">
                                <Border
                                    x:Name="AlbumThumb"
                                    Width="32"
                                    Height="32"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    CornerRadius="3">
                                    <TextBlock
                                        Width="24"
                                        Margin="0,-2,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Track}"
                                        TextAlignment="Center" />
                                </Border>
                            </Button>

                            <RelativePanel
                                Grid.Column="2"
                                Margin="-8,0,0,0"
                                VerticalAlignment="Center">
                                <TextBlock
                                    x:Name="songtitle"
                                    MaxLines="2"
                                    Text="{x:Bind Title}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="WrapWholeWords" />
                                <TextBlock
                                    x:Name="artistname"
                                    Margin="16,0,0,0"
                                    RelativePanel.RightOf="songtitle"
                                    TextTrimming="CharacterEllipsis">
                                    <Hyperlink
                                        Click="Artist_Click"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        UnderlineStyle="None">
                                        <Run Text="{x:Bind Artist, Mode=OneWay}" />
                                    </Hyperlink>
                                </TextBlock>


                            </RelativePanel>
                            <StackPanel
                                Grid.Column="3"
                                Orientation="Horizontal"
                                Spacing="4">

                                <Button
                                    x:Name="PropsHover"
                                    x:Uid="/Information/Props"
                                    Width="36"
                                    Height="36"
                                    Padding="0"
                                    Click="PropsHover_Click"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                    <FontIcon FontSize="16" Glyph="&#xE104;" />
                                </Button>

                                <TextBlock
                                    Margin="12"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Length, Converter={StaticResource TimeToStr}}"
                                    Visibility="{x:Bind local:App.SViewModel.ShowDurationInSongs, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>



            <ListView.Footer>

                <Grid
                    x:Name="IfAlbumHasMore"
                    Margin="0,12,0,8"
                    ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        x:Name="MoreAlbumsByArtist"
                        Width="auto"
                        Height="auto"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE93C;" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="More albums by this artist" />
                                </StackPanel>
                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                            </StackPanel>
                            <GridView
                                Grid.Row="1"
                                Margin="0,48,0,-8"
                                ItemsSource="{x:Bind AlbumsByArtist}"
                                SelectionMode="Single"
                                Tapped="GridView_Tapped">
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:AlbumViewModel">
                                        <StackPanel
                                            Width="134"
                                            Margin="12"
                                            Orientation="Vertical"
                                            Spacing="2">
                                            <Border x:Name="ItemThumbnail" CornerRadius="4">
                                                <Image
                                                    Width="134"
                                                    Height="134"
                                                    Stretch="UniformToFill">
                                                    <Image.Source>
                                                        <BitmapImage
                                                            DecodePixelHeight="134"
                                                            DecodePixelWidth="134"
                                                            UriSource="{x:Bind Thumbnail}" />
                                                    </Image.Source>
                                                </Image>
                                            </Border>

                                            <TextBlock
                                                Padding="0,7,0,0"
                                                MaxLines="1"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Text="{x:Bind Title}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Padding="0,0,0,0"
                                                MaxLines="1"
                                                Text="{x:Bind Year}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </Grid>
                    </Border>

                    <!--<Border
                        x:Name="RelatedAlbums"
                        Grid.Column="1"
                        Width="auto"
                        Height="150"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"
                        Style="{StaticResource SettingsCard}">
                        <Grid>
                            <StackPanel>
                                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                                    <FontIcon Glyph="" />
                                    <TextBlock
                                        Margin="8,0,0,0"
                                        FontWeight="SemiBold"
                                        Text="You might like these" />
                                </StackPanel>
                                <Rectangle
                                    Height="1"
                                    Margin="-16,12,-16,12"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
                                <TextBlock
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="28"
                                    FontWeight="SemiBold"
                                    Opacity="0.6"
                                    Text="Coming soon" />
                            </StackPanel>
                        </Grid>
                    </Border>-->


                </Grid>
            </ListView.Footer>
        </ListView>
    </Grid>
</Page>
