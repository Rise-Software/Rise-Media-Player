<Page
    x:Class="Rise.App.Views.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <CommandBar Background="Transparent"
                    DefaultLabelPosition="Right"
                    HorizontalAlignment="Left"
                    Margin="-12,0">
            <AppBarButton x:Name="PlayItem"
                          x:Uid="/Information/Play"
                          Click="PlayButton_Click"
                          Icon="Play"
                          Style="{StaticResource AppBarCompactButton}" />

            <AppBarSeparator />

            <AppBarButton x:Name="ShuffleItem"
                          x:Uid="/Information/Shuffle"
                          Click="ShuffleButton_Click"
                          Icon="Shuffle" />
            <AppBarButton x:Uid="/Information/Add" IsEnabled="False" IsCompact="True">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xECC8;" />
                </AppBarButton.Icon>

                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Playlist">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE142;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>

            <AppBarSeparator />

            <AppBarButton x:Uid="/Information/Delete"
                          Icon="Delete"
                          IsEnabled="False"
                          Style="{StaticResource AppBarCompactButton}" />
            <AppBarButton x:Uid="/Information/Edit"
                          Icon="Edit"
                          IsEnabled="False"
                          Style="{StaticResource AppBarCompactButton}" />

            <AppBarSeparator />

            <AppBarButton x:Uid="/Information/View" IsEnabled="False">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xECAA;" />
                </AppBarButton.Icon>

                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Default">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xF0E2;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>

            <AppBarButton x:Uid="/Information/Sort"
                          Icon="Sort">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Title"
                                                  Click="SortFlyoutItem_Click"
                                                  IsChecked="True"
                                                  Tag="Title" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Artist"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Artist" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Genre"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Genres" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Year"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Year" />

                        <MenuFlyoutSeparator />

                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Ascending"
                                                  Click="SortFlyoutItem_Click"
                                                  GroupName="Descending"
                                                  IsChecked="True"
                                                  Tag="Ascending" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Descending"
                                                  Click="SortFlyoutItem_Click"
                                                  GroupName="Descending"
                                                  Tag="Descending" />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>

        <GridView x:Name="MainGrid"
                  animations:Connected.ListItemElementName="AlbumThumb"
                  animations:Connected.ListItemKey="AlbumArt"
                  Grid.Row="1"
                  ItemsSource="{x:Bind Albums, Mode=OneWay}"
                  ItemTemplate="{StaticResource AlbumTemplate}"
                  Margin="-56,0"
                  Padding="44,0,44,120"
                  RightTapped="MainGrid_RightTapped"
                  SelectedItem="{x:Bind SelectedAlbum, Mode=TwoWay}"
                  SelectionMode="Single"
                  Tapped="GridView_Tapped">
            <GridView.Resources>
                <MenuFlyout x:Key="AlbumFlyout" x:Name="AlbumFlyout">
                    <MenuFlyoutItem x:Uid="/Information/PlayItem"
                                    Click="PlayButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE102;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShuffleAlbum"
                                    Click="ShuffleButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE14B;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShowArtist"
                                    Click="ShowArtist_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE125;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutItem x:Name="Props"
                                    x:Uid="/MediaData/Properties"
                                    IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE104;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/SelectAlbum">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE1E3;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </GridView.Resources>
        </GridView>
    </Grid>
</Page>
