<Page
    x:Class="Rise.App.Views.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <muxc:TeachingTip x:Name="DiscyOnAlbum"
	        Title="Managing and organising your albums"
	        Subtitle="Use the command bar to sort your albums into different types. Click on an album to see what's in store. You can add a whole album to a playlist, shuffle or share with friends."
	        PreferredPlacement="Auto"
	        PlacementMargin="20"
             
	        IsLightDismissEnabled="True"
	        ActionButtonContent="Learn more"
                          
	        CloseButtonContent="Got it!">
            <muxc:TeachingTip.HeroContent>
                <Image Source="/Assets/Branding/discygraphic.png" />
            </muxc:TeachingTip.HeroContent>
        </muxc:TeachingTip>

        <muxc:InfoBar
            Margin="0,50,0,0"
            IsOpen="True"
            Severity="Warning"
            Title="Notice"
            Message="Your current build of Rise Media Player is not intended for public use, nor for the use of anyone besides trusted developers. Use at your own risk. Being heavily unfinished, glitches, bugs and crashes may occur. Please submit feedback if you face any of these issues."
                />

        <CommandBar Background="Transparent"
                    DefaultLabelPosition="Right"
                    HorizontalAlignment="Left"
                    Margin="-12,0">
            <AppBarButton x:Name="PlayItem"
                          x:Uid="/Information/Play"
                          Click="PlayButton_Click"
                          Icon="Play"
                          Style="{StaticResource AppBarCompactButton}" />

            <AppBarSeparator />

            <AppBarButton x:Name="ShuffleItem"
                          x:Uid="/Information/Shuffle"
                          Click="ShuffleButton_Click"
                          Icon="Shuffle" />
            <AppBarButton x:Uid="/Information/Add" IsEnabled="False" IsCompact="True">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xECC8;" />
                </AppBarButton.Icon>

                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Playlist">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE142;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>

            <AppBarSeparator />

            <AppBarButton x:Uid="/Information/Delete"
                          Icon="Delete"
                          IsEnabled="False"
                          Style="{StaticResource AppBarCompactButton}" />
            <AppBarButton x:Uid="/Information/Edit"
                          Icon="Edit"
                          IsEnabled="False"
                          Style="{StaticResource AppBarCompactButton}" />

            <AppBarSeparator />

            <AppBarButton x:Uid="/Information/View">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xECAA;" />
                </AppBarButton.Icon>

                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <muxc:RadioMenuFlyoutItem Text="Tiles (Vertical)" IsChecked="True" />
                        <muxc:RadioMenuFlyoutItem Text="Tiles (Horizontal)" />
                        <muxc:RadioMenuFlyoutItem Text="List" />
                        <MenuFlyoutSeparator/>
                        <ToggleMenuFlyoutItem Text="Split online &amp; local media" />
                        <MenuFlyoutSeparator/>
                        <ToggleMenuFlyoutItem Text="Card background" />
                        <ToggleMenuFlyoutItem Text="Rounded album art" />
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="Additional settings"/>
                        <MenuFlyoutSubItem Text="Show">
                            <ToggleMenuFlyoutItem Text="Album art" Click="ShowThumbnail_Click" IsChecked="True" />
                            <ToggleMenuFlyoutItem Text="Artist name" Click="ShowArtistName_Click" IsChecked="True" />
                            <ToggleMenuFlyoutItem Text="Genre" Click="ShowGenres_Click" />
                            <ToggleMenuFlyoutItem Text="Release year"/>
                            <ToggleMenuFlyoutItem Text="Rating"/>
                        </MenuFlyoutSubItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>

            <AppBarButton x:Uid="/Information/Sort"
                          Icon="Sort">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Title"
                                                  Click="SortFlyoutItem_Click"
                                                  IsChecked="true"
                                                  Tag="Title" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Artist"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Artist" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Genre"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Genres" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Year"
                                                  Click="SortFlyoutItem_Click"
                                                  Tag="Year" />

                        <MenuFlyoutSeparator />

                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Ascending"
                                                  Click="SortFlyoutItem_Click"
                                                  GroupName="Descending"
                                                  IsChecked="True"
                                                  Tag="Ascending" />
                        <muxc:RadioMenuFlyoutItem x:Uid="/Information/Descending"
                                                  Click="SortFlyoutItem_Click"
                                                  GroupName="Descending"
                                                  Tag="Descending" />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>

        <GridView x:Name="MainGrid"
                  animations:Connected.ListItemElementName="AlbumThumb"
                  animations:Connected.ListItemKey="AlbumArt"
                  Grid.Row="1"
                  ItemsSource="{x:Bind Albums}"
                  Margin="-56,0"
                  Padding="44,0,44,120"
                  RightTapped="MainGrid_RightTapped"
                  SelectedItem="{x:Bind SelectedAlbum, Mode=TwoWay}"
                  SelectionMode="Single"
                  Tapped="GridView_Tapped">
            <GridView.Resources>
                <MenuFlyout x:Key="AlbumFlyout" x:Name="AlbumFlyout">
                    <MenuFlyoutItem x:Uid="/Information/PlayItem"
                                    Click="PlayButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE102;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShuffleAlbum"
                                    Click="ShuffleButton_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE14B;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:Uid="/Information/ShowArtist"
                                    Click="ShowArtist_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE125;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator />

                    <MenuFlyoutSubItem x:Name="AddTo"
                                    x:Uid="/Information/AddTo"
                                    IsEnabled="True">
                        <MenuFlyoutSubItem.Icon>
                            <FontIcon Glyph="&#xECC8;" />
                        </MenuFlyoutSubItem.Icon>
                        <MenuFlyoutItem x:Name="NewPlaylist"
                                    x:Uid="/Information/NewPlaylist"
                                    IsEnabled="False">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE93F;" FontFamily="Assets/MediaPlayerIcons.ttf#Media Player Fluent Icons"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem x:Name="PinToStart"
                                    x:Uid="/Information/PinToStart"
                                    IsEnabled="False">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE141;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyoutSubItem>
                    
                    <MenuFlyoutItem x:Name="Share"
                                    x:Uid="/Information/Share"
                                    IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE72D;"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator/>

                    <MenuFlyoutItem x:Name="AskDiscy"
                                    Click="AskDiscy_Click"
                                    x:Uid="/Information/AskDiscy"
                                    IsEnabled="True">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE11B;"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutSeparator/>

                    <MenuFlyoutItem x:Name="Remove"
                                    x:Uid="/Information/RemoveThing"
                                    IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE107;"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>


                    <MenuFlyoutItem x:Name="Props"
                                    x:Uid="/MediaData/Properties"
                                    IsEnabled="False">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE104;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    

                    <MenuFlyoutItem x:Uid="/Information/SelectAlbumorSong">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xE1E3;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </GridView.Resources>

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AlbumViewModel">
                    <StackPanel Margin="12"
                                Orientation="Vertical"
                                Spacing="2"
                                Width="134">
                        <Button CornerRadius="4"
                                IsHitTestVisible="False"
                                ToolTipService.ToolTip="{x:Bind Title}"
                                Padding="0"
                                Visibility="{x:Bind IsThumbnailVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}">
                            <Border x:Name="AlbumThumb"
                                    CornerRadius="4">
                                <Image x:Phase="1"
                                       Height="134"
                                       Source="{x:Bind Thumbnail}"
                                       Stretch="UniformToFill"
                                       Width="134" />
                            </Border>
                        </Button>

                        <TextBlock Text="{x:Bind Title}"
                                   Padding="0,7,0,0"
                                   MaxLines="1"
                                   ToolTipService.ToolTip="{x:Bind Title}"
                                   Style="{StaticResource BaseTextBlockStyle}"
                                   TextWrapping="Wrap" />
                        <TextBlock Visibility="{x:Bind IsArtistVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}" FontSize="13">
                            <Hyperlink Click="Artist_Click" UnderlineStyle="None" ToolTipService.ToolTip="{x:Bind Artist}">
                                <Run Text="{x:Bind Artist}" />
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Text="{x:Bind Genres}"
                                   MaxLines="1"
                                   ToolTipService.ToolTip="{x:Bind Title}"
                                   Visibility="{x:Bind IsGenresVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        
    </Grid>
</Page>
