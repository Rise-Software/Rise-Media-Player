<Page
    x:Class="Rise.App.Views.GenreSongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converters="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    x:Name="Root"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:Height="320"
    d:Width="500"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolToRoundedCorners x:Key="BoolToRounded" />
            <converters:UintToStringConverter x:Key="UintToStringConverter" />
            <converters:NullToBoolean x:Key="NullToBool" />
        </ResourceDictionary>
    </Page.Resources>

    <ListView
        x:Name="MainList"
        Grid.Row="1"
        Padding="44,12,44,120"
        d:Padding="20,12"
        DoubleTapped="MainList_DoubleTapped"
        IsDoubleTapEnabled="True"
        ItemsSource="{x:Bind Songs}"
        RightTapped="MainList_RightTapped"
        SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
        SelectionMode="Single">

        <ListView.ItemContainerStyle>
            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </ListView.ItemContainerStyle>

        <ListView.Resources>
            <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                <MenuFlyoutItem x:Uid="/Information/PlayItem" Click="PlayButton_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE102;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator />

                <MenuFlyoutItem
                    x:Name="Props"
                    x:Uid="/MediaData/Properties"
                    Click="Props_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE104;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </ListView.Resources>

        <ListView.Header>
            <Border
                Height="230"
                Margin="0,0,0,16"
                BorderThickness="1"
                CornerRadius="8"
                Style="{StaticResource SettingsCard}">
                <Grid>
                    <Grid Margin="-16" CornerRadius="8">
                        <ParallaxView
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalShift="0"
                            Source="{x:Bind MainList}"
                            VerticalShift="500">
                            <Image
                                Opacity="0.2"
                                Source="ms-appx:///Assets/gradientfill.png"
                                Stretch="UniformToFill" />
                        </ParallaxView>
                    </Grid>

                    <Grid Margin="-16">
                        <Grid.Background>
                            <media:BackdropBlurBrush Amount="0" />
                        </Grid.Background>

                        <Grid
                            Margin="16"
                            Padding="0"
                            ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>



                            <StackPanel
                                Grid.Column="1"
                                Padding="0,10,0,0"
                                VerticalAlignment="Center"
                                Orientation="Vertical"
                                Spacing="8">
                                <RelativePanel>
                                    <StackPanel>
                                        <TextBlock
                                            x:Name="GenreName"
                                            x:FieldModifier="public"
                                            FontSize="36"
                                            MaxLines="1"
                                            Style="{StaticResource TitleTextBlockStyle}"
                                            Text="{x:Bind SelectedGenre.Name, Mode=OneWay}" />
                                    </StackPanel>
                                </RelativePanel>


                                <CommandBar
                                    Margin="-12,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    DefaultLabelPosition="Right">
                                    <AppBarButton
                                        x:Name="PlayItem"
                                        Click="PlayButton_Click"
                                        Icon="Play"
                                        Label="Play all"
                                        ToolTipService.ToolTip="Play all" />

                                    <AppBarSeparator />

                                    <AppBarButton
                                        x:Name="ShuffleItem"
                                        x:Uid="/Information/Shuffle"
                                        Click="ShuffleButton_Click"
                                        Icon="Shuffle" />
                                    <AppBarButton
                                        x:Uid="/Information/Add"
                                        IsCompact="True"
                                        IsEnabled="True">
                                        <AppBarButton.Icon>
                                            <FontIcon Glyph="&#xECC8;" />
                                        </AppBarButton.Icon>

                                        <AppBarButton.Flyout>
                                            <MenuFlyout x:Name="AddToCommand" />
                                        </AppBarButton.Flyout>
                                    </AppBarButton>
                                </CommandBar>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </ListView.Header>

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:SongViewModel">
                <Border
                    Margin="-12,2,-10,2"
                    Padding="4,0,4,0"
                    Style="{StaticResource SettingsCard}">
                    <Grid
                        Margin="4,0,0,0"
                        Padding="0,4"
                        Background="Transparent"
                        ColumnSpacing="12"
                        PointerCanceled="Grid_PointerExited"
                        PointerEntered="Grid_PointerEntered"
                        PointerExited="Grid_PointerExited">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button
                                x:Uid="/Information/Play"
                                Width="36"
                                Height="36"
                                Margin="2,0,-28,0"
                                Padding="0"
                                Click="PlayButton_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE102;" />
                            </Button>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Margin="-8"
                            Padding="0"
                            CornerRadius="7"
                            IsHitTestVisible="False"
                            Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}">
                            <Border
                                x:Name="AlbumThumb"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="3">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelHeight="32"
                                            DecodePixelWidth="32"
                                            UriSource="{x:Bind Thumbnail}" />
                                    </Image.Source>
                                </Image>
                            </Border>
                        </Button>

                        <RelativePanel
                            Grid.Column="2"
                            Margin="-8,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                x:Name="songtitle"
                                MaxLines="2"
                                Text="{x:Bind Title}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="WrapWholeWords" />
                            <TextBlock
                                x:Name="artistname"
                                Margin="16,0,0,0"
                                RelativePanel.RightOf="songtitle"
                                TextTrimming="CharacterEllipsis">
                                <Hyperlink
                                    Click="Artist_Click"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind Artist, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock
                                x:Name="Pill"
                                Margin="8,0,0,0"
                                RelativePanel.RightOf="artistname"
                                Text="•" />

                            <TextBlock
                                Margin="8,0,0,0"
                                RelativePanel.RightOf="Pill"
                                TextTrimming="CharacterEllipsis">
                                <Hyperlink
                                    Click="Album_Click"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind Album, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>


                        </RelativePanel>
                        <StackPanel
                            Grid.Column="3"
                            Orientation="Horizontal"
                            Spacing="4">

                            <Button
                                x:Name="PropsHover"
                                x:Uid="/Information/Props"
                                Width="36"
                                Height="36"
                                Padding="0"
                                Click="PropsHover_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE104;" />
                            </Button>

                            <TextBlock
                                Margin="12"
                                VerticalAlignment="Center"
                                Text="{x:Bind Length, Converter={StaticResource TimeToStr}}"
                                Visibility="{x:Bind local:App.SViewModel.ShowDurationInSongs, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Page>

