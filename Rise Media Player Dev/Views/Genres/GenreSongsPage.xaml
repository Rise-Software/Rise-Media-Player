<Page
    x:Class="Rise.App.Views.GenreSongsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:converters="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    x:Name="Root"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BoolToRoundedCorners x:Key="BoolToRounded" />
            <converters:UintToStringConverter x:Key="UintToStringConverter" />
            <converters:NullToBoolean x:Key="NullToBool" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel>
            <Grid Padding="0,0,12,32" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>




                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal"
                    Spacing="0">
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="28"
                        MaxLines="1"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Text="{x:Bind SelectedGenre.Name, Mode=OneWay}" />

                    <CommandBar
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        DefaultLabelPosition="Right">
                        <AppBarButton
                            x:Uid="/Information/Play"
                            Click="PlayButton_Click"
                            Icon="Play"
                            IsEnabled="{x:Bind SelectedSong, Converter={StaticResource NullToBool}, Mode=OneWay}"
                            Style="{StaticResource AppBarCompactButtonStyle}" />

                        <AppBarSeparator />

                        <AppBarButton
                            x:Uid="/Information/Shuffle"
                            Click="ShuffleButton_Click"
                            Icon="Shuffle" />
                        <AppBarButton
                            x:Uid="/Information/Add"
                            IsCompact="True"
                            IsEnabled="True">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xECC8;" />
                            </AppBarButton.Icon>

                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Name="NewPlaylist"
                                        x:Uid="/Information/NewPlaylist"
                                        IsEnabled="False">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon FontFamily="Media Player Fluent Icons" Glyph="&#xE93F;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Name="PinToStart"
                                        x:Uid="/Information/PinToStart"
                                        IsEnabled="False">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE141;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>

                        <AppBarSeparator />

                        <AppBarButton
                            x:Uid="/Information/Delete"
                            Icon="Delete"
                            IsEnabled="False"
                            Style="{StaticResource AppBarCompactButtonStyle}" />
                        <AppBarButton
                            x:Uid="/Information/Edit"
                            Click="EditButton_Click"
                            Icon="Edit"
                            IsEnabled="{x:Bind SelectedSong, Converter={StaticResource NullToBool}, Mode=OneWay}"
                            Style="{StaticResource AppBarCompactButtonStyle}" />

                        <AppBarSeparator />

                        <!--AppBarButton x:Uid="/Information/View">
                                        <AppBarButton.Icon>
                                            <FontIcon Glyph="&#xECAA;" />
                                        </AppBarButton.Icon>

                                        <AppBarButton.Flyout>
                                            <MenuFlyout>
                                                <muxc:RadioMenuFlyoutItem x:Uid="/Information/Songs"
                                                                          Command="{Binding ElementName=Root, Path=ViewCommand}"
                                                                          CommandParameter="Default"
                                                                          GroupName="View" />
                                                <muxc:RadioMenuFlyoutItem x:Uid="/Information/Artists"
                                                                          Command="{Binding ElementName=Root, Path=ViewCommand}"
                                                                          CommandParameter="Artists"
                                                                          GroupName="View" />
                                                <muxc:RadioMenuFlyoutItem x:Uid="/Information/Albums"
                                                                          Command="{Binding ElementName=Root, Path=ViewCommand}"
                                                                          CommandParameter="Albums"
                                                                          GroupName="View" />
                                            </MenuFlyout>
                                        </AppBarButton.Flyout>
                                    </AppBarButton-->

                        <AppBarButton x:Uid="/Information/Sort" Icon="Sort">
                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Track"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Track" />
                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Title"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Title"
                                        IsChecked="True" />
                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Genre"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Genres" />
                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Year"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Year" />

                                    <MenuFlyoutSeparator />

                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Ascending"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Ascending"
                                        GroupName="Descending"
                                        IsChecked="True" />
                                    <muxc:RadioMenuFlyoutItem
                                        x:Uid="/Information/Descending"
                                        Command="{Binding ElementName=Root, Path=SortCommand}"
                                        CommandParameter="Descending"
                                        GroupName="Descending" />
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                    </CommandBar>
                </StackPanel>
            </Grid>

            <StackPanel>
                <muxc:NavigationView
                    Margin="-12,-24,0,10"
                    IsBackButtonVisible="Collapsed"
                    IsSettingsVisible="False"
                    ItemInvoked="NavigationView_ItemInvoked"
                    PaneDisplayMode="Top">
                    <muxc:NavigationView.Resources>
                        <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                        <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                    </muxc:NavigationView.Resources>
                    <muxc:NavigationView.MenuItems>
                        <muxc:NavigationViewItem
                            x:Name="AlbumsItem"
                            Content="Songs"
                            IsSelected="True"
                            Tag="Songs" />
                        <muxc:NavigationViewItem
                            x:Name="SongsItem"
                            Content="Albums"
                            Tag="Albums" />
                        <muxc:NavigationViewItem
                            x:Name="ArtistsItem"
                            Content="Artists"
                            Tag="Artists" />
                    </muxc:NavigationView.MenuItems>
                </muxc:NavigationView>
                <ListView
                    x:Name="MainList"
                    Grid.Row="1"
                    Padding="0,0,0,120"
                    DoubleTapped="MainList_DoubleTapped"
                    IsDoubleTapEnabled="True"
                    ItemsSource="{x:Bind Songs}"
                    RightTapped="MainList_RightTapped"
                    SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
                    SelectionMode="Single">
                    <ListView.Resources>
                        <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                            <MenuFlyoutItem x:Uid="/Information/PlayItem" Click="PlayButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE102;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                x:Name="Props"
                                x:Uid="/MediaData/Properties"
                                Click="Props_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE104;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </ListView.Resources>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:SongViewModel">
                            <Grid
                                Padding="0,4"
                                Background="Transparent"
                                ColumnSpacing="12"
                                PointerCanceled="Grid_PointerExited"
                                PointerEntered="Grid_PointerEntered"
                                PointerExited="Grid_PointerExited">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Width="24"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind Track}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}" />

                                <Button
                                    x:Uid="/Information/Play"
                                    Width="32"
                                    Height="32"
                                    Padding="0"
                                    Click="PlayButton_Click"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                    <FontIcon FontSize="16" Glyph="&#xE102;" />
                                </Button>

                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{x:Bind Title}" TextTrimming="CharacterEllipsis" />
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock>
                                            <Hyperlink Click="Artist_Click" UnderlineStyle="None">
                                                <Run Text="{x:Bind Artist}" />
                                            </Hyperlink>
                                        </TextBlock>

                                        <TextBlock Grid.Column="1" Text="•" />

                                        <TextBlock Grid.Column="2">
                                            <Hyperlink Click="Album_Click" UnderlineStyle="None">
                                                <Run Text="{x:Bind Album}" />
                                            </Hyperlink>
                                        </TextBlock>

                                        <Rectangle Grid.Column="3" />
                                    </Grid>
                                </StackPanel>

                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    x:Phase="1"
                                    Text="{x:Bind Length, Converter={StaticResource TimeToStr}}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <GridView
                    x:Name="ArtistGrid"
                    Grid.Row="1"
                    Margin="0,0"
                    Padding="0,0,0,120"
                    animations:Connected.ListItemElementName="ArtistThumb"
                    animations:Connected.ListItemKey="ArtistArt"
                    ItemsSource="{x:Bind AllArtistsInGenre}"
                    RightTapped="ArtistGrid_RightTapped"
                    SelectionMode="Single"
                    Tapped="ArtistGrid_Tapped"
                    Visibility="Collapsed">
                    <GridView.Resources>
                        <MenuFlyout x:Key="ArtistFlyout" x:Name="ArtistFlyout">
                            <MenuFlyoutItem x:Uid="/Information/PlayItem">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE102;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem x:Uid="/Information/ShuffleArtist">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE14B;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutSubItem
                                x:Name="AddTo"
                                x:Uid="/Information/AddTo"
                                IsEnabled="True">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xECC8;" />
                                </MenuFlyoutSubItem.Icon>
                                <MenuFlyoutItem
                                    x:Name="NewPlaylistMenu"
                                    x:Uid="/Information/NewPlaylist"
                                    IsEnabled="False">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Media Player Fluent Icons" Glyph="&#xE93F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    x:Name="PinToStartMenu2"
                                    x:Uid="/Information/PinToStart"
                                    IsEnabled="False">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE141;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyoutSubItem>

                            <MenuFlyoutItem
                                x:Name="Share2"
                                x:Uid="/Information/Share"
                                IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72D;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                x:Name="AskDiscy2"
                                x:Uid="/Information/AskDiscy"
                                IsEnabled="True">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE11B;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                x:Name="Remove2"
                                x:Uid="/Information/RemoveThing"
                                IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE107;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>


                            <MenuFlyoutItem x:Name="ChngArtImg2" x:Uid="/Information/ChangeArtImg">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEF1F;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>


                            <MenuFlyoutItem x:Uid="/Information/SelectAlbumorSong">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE1E3;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </GridView.Resources>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ArtistViewModel">
                            <Grid
                                Width="210"
                                Margin="12"
                                ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="84" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Button
                                    Padding="0"
                                    CornerRadius="42"
                                    IsHitTestVisible="False">
                                    <Border x:Name="ArtistThumb" CornerRadius="42">
                                        <Image
                                            Width="84"
                                            Height="84"
                                            Stretch="UniformToFill">
                                            <Image.Source>
                                                <BitmapImage
                                                    DecodePixelHeight="84"
                                                    DecodePixelWidth="84"
                                                    UriSource="{x:Bind Picture}" />
                                            </Image.Source>
                                        </Image>
                                    </Border>
                                </Button>

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock
                                        MaxLines="1"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="{x:Bind Name}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Bind Songs}" />
                                    <TextBlock
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Bind Albums}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <GridView
                    x:Name="AlbumGrid"
                    Grid.Row="1"
                    Margin="0,0"
                    Padding="0,0,0,120"
                    animations:Connected.ListItemElementName="AlbumThumb"
                    animations:Connected.ListItemKey="AlbumArt"
                    ItemsSource="{x:Bind Albums}"
                    RightTapped="AlbumGrid_RightTapped"
                    SelectionMode="Single"
                    Tapped="AlbumGrid_Tapped"
                    Visibility="Collapsed">
                    <GridView.Resources>
                        <MenuFlyout x:Key="AlbumFlyout" x:Name="AlbumFlyout">
                            <MenuFlyoutItem x:Uid="/Information/PlayItem">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE102;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem x:Uid="/Information/ShuffleAlbum">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE14B;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem x:Uid="/Information/ShowArtist">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE125;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutSubItem
                                x:Name="AddTo2"
                                x:Uid="/Information/AddTo"
                                IsEnabled="True">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xECC8;" />
                                </MenuFlyoutSubItem.Icon>
                                <MenuFlyoutItem
                                    x:Name="NewPlaylist2"
                                    x:Uid="/Information/NewPlaylist"
                                    IsEnabled="False">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon FontFamily="Assets/MediaPlayerIcons.ttf#Media Player Fluent Icons" Glyph="&#xE93F;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem
                                    x:Name="PinToStart2"
                                    x:Uid="/Information/PinToStart"
                                    IsEnabled="False">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE141;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyoutSubItem>

                            <MenuFlyoutItem
                                x:Name="Share3"
                                x:Uid="/Information/Share"
                                IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72D;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                x:Name="AskDiscy3"
                                x:Uid="/Information/AskDiscy"
                                IsEnabled="True">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE11B;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem
                                x:Name="Remove"
                                x:Uid="/Information/RemoveThing"
                                IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE107;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>


                            <MenuFlyoutItem
                                x:Name="Props3"
                                x:Uid="/MediaData/Properties"
                                IsEnabled="False">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE104;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>


                            <MenuFlyoutItem x:Uid="/Information/SelectAlbumorSong">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE1E3;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </GridView.Resources>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:AlbumViewModel">
                            <StackPanel
                                Width="134"
                                Margin="12"
                                Orientation="Vertical"
                                Spacing="2">
                                <Border
                                    CornerRadius="{x:Bind HasRoundedAlbumArt, Mode=OneWay, Converter={StaticResource BoolToRounded}, ConverterParameter=ForAlbum}"
                                    ToolTipService.ToolTip="{x:Bind TitleWithArtist}"
                                    Visibility="{x:Bind IsThumbnailVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}">
                                    <Border x:Name="AlbumThumb" CornerRadius="{x:Bind HasRoundedAlbumArt, Mode=OneWay, Converter={StaticResource BoolToRounded}, ConverterParameter=ForAlbum}">
                                        <Image
                                            Width="134"
                                            Height="134"
                                            Stretch="UniformToFill">
                                            <Image.Source>
                                                <BitmapImage
                                                    DecodePixelHeight="134"
                                                    DecodePixelWidth="134"
                                                    UriSource="{x:Bind Thumbnail}" />
                                            </Image.Source>
                                        </Image>
                                    </Border>
                                </Border>

                                <TextBlock
                                    Padding="0,7,0,0"
                                    MaxLines="1"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="{x:Bind Title}"
                                    TextWrapping="Wrap"
                                    ToolTipService.ToolTip="{x:Bind Title}"
                                    Visibility="{x:Bind IsTitleVisible, Mode=OneWay}" />

                                <TextBlock
                                    MaxLines="1"
                                    Text="{x:Bind Genres}"
                                    TextWrapping="Wrap"
                                    Visibility="{x:Bind IsGenresVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}" />

                                <TextBlock FontSize="13" Visibility="{x:Bind IsArtistVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}">
                                    <Hyperlink
                                        Click="Artist_Click"
                                        ToolTipService.ToolTip="{x:Bind Artist}"
                                        UnderlineStyle="None">
                                        <Run Text="{x:Bind Artist}" />
                                    </Hyperlink>
                                </TextBlock>

                                <TextBlock FontSize="13" Visibility="{x:Bind IsReleaseYearVisible, Converter={StaticResource BoolToVis}, Mode=OneWay}">
                                    Release year:<Run Text="{x:Bind Year, Converter={StaticResource UintToStringConverter}}" />
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
