<Page
    x:Class="Rise.App.Views.PlaylistDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    mc:Ignorable="d">
    <Grid Margin="0,0,0,0">
        <ListView
            x:Name="MainList"
            Margin="-56,0,-56,0"
            Padding="56,0"
            DoubleTapped="MainList_DoubleTapped"
            ItemsSource="{x:Bind plViewModel.Songs, Mode=OneWay}"
            RightTapped="MainList_RightTapped"
            SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}">

            <ListView.Resources>
                <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                    <MenuFlyoutItem
                        x:Name="Remove"
                        x:Uid="/Information/RemovePlaylist"
                        Click="Remove_Click">
                        <MenuFlyoutItem.Icon>
                            <FontIcon Glyph="&#xECC9;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                </MenuFlyout>
            </ListView.Resources>

            <ListView.Header>
                <Border
                    Margin="0,56,0,12"
                    Padding="0,0,0,0"
                    CornerRadius="8">
                    <Grid Height="200">
                        <ParallaxView Source="{x:Bind MainList}" VerticalShift="300">
                            <Image
                                Opacity="0.6"
                                Source="{x:Bind plViewModel.Icon, Mode=OneWay}"
                                Stretch="UniformToFill" />
                        </ParallaxView>
                        <Border>
                            <Grid Padding="24,24,56,24" ColumnSpacing="24">
                                <Grid.Background>
                                    <media:BackdropBlurBrush Amount="60" />
                                </Grid.Background>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="154" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <Button
                                    Padding="0"
                                    ui:Effects.Shadow="{StaticResource LightShadowBottomOffset}"
                                    CornerRadius="8"
                                    IsHitTestVisible="False">
                                    <Border CornerRadius="8">
                                        <Image
                                            Width="154"
                                            Height="154"
                                            Source="{x:Bind plViewModel.Icon, Mode=OneWay}"
                                            Stretch="Uniform" />
                                    </Border>
                                </Button>

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical"
                                    Spacing="8">
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            MaxLines="1"
                                            Style="{StaticResource TitleTextBlockStyle}"
                                            Text="{x:Bind plViewModel.Title, Mode=OneWay}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--<FontIcon x:Name="Folder"
                                          Grid.Column="1"
                                          FontSize="20"
                                          Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                          Glyph="&#xF12B;"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="left"/>-->
                                    </Grid>

                                    <!--<TextBlock FontWeight="SemiBold" Style="{StaticResource BodyTextBlockStyle}">



                                <Hyperlink Click="Artist_Click" UnderlineStyle="None">
                                    <Run Text="{x:Bind Artist}" />
                                </Hyperlink>



                                    </TextBlock>-->
                                    <StackPanel Grid.Column="1" Orientation="Vertical">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>

                                            <Rectangle Grid.Column="1" />
                                        </Grid>
                                    </StackPanel>

                                    <TextBlock Text="{x:Bind plViewModel.Description, Mode=OneWay}" />

                                    <CommandBar
                                        Margin="-12,0"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        DefaultLabelPosition="Right">
                                        <AppBarButton
                                            x:Name="PlayItem"
                                            x:Uid="/Information/Play"
                                            Click="PlayButton_Click"
                                            Icon="Play"
                                            Style="{StaticResource AppBarCompactButtonStyle}" />

                                        <AppBarSeparator />




                                        <AppBarButton x:Uid="/Information/EditPlaylist" Click="PlaylistProperties_Click">
                                            <AppBarButton.Icon>
                                                <FontIcon Glyph="&#xE70F;" />
                                            </AppBarButton.Icon>
                                        </AppBarButton>

                                        <AppBarButton
                                            x:Uid="/Information/DeleteFull"
                                            Click="AppBarButton_Click"
                                            Icon="Delete"
                                            IsEnabled="True" />
                                    </CommandBar>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SongViewModel">
                    <Grid
                        Padding="0,4"
                        Background="Transparent"
                        ColumnSpacing="12"
                        PointerCanceled="Grid_PointerExited"
                        PointerEntered="Grid_PointerEntered"
                        PointerExited="Grid_PointerExited">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button
                                x:Uid="/Information/Play"
                                Width="36"
                                Height="36"
                                Margin="2,0,-28,0"
                                Padding="0"
                                Click="PlayButton_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE102;" />
                            </Button>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Margin="-8"
                            Padding="0"
                            CornerRadius="7"
                            IsHitTestVisible="False"
                            Visibility="{x:Bind IsFocused, Converter={StaticResource BoolToVis}, ConverterParameter=Reverse, Mode=OneWay}">
                            <Border
                                x:Name="AlbumThumb"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="3">
                                <Image Width="32" Height="32">
                                    <Image.Source>
                                        <BitmapImage
                                            DecodePixelHeight="32"
                                            DecodePixelWidth="32"
                                            UriSource="{x:Bind Thumbnail}" />
                                    </Image.Source>
                                </Image>
                            </Border>
                        </Button>

                        <RelativePanel
                            Grid.Column="2"
                            Margin="-8,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                x:Name="songtitle"
                                MaxLines="2"
                                Text="{x:Bind Title}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="WrapWholeWords" />
                            <TextBlock
                                x:Name="artistname"
                                Margin="16,0,0,0"
                                RelativePanel.RightOf="songtitle"
                                TextTrimming="CharacterEllipsis">
                                <Hyperlink
                                    Click="Artist_Click"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind Artist, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock
                                x:Name="Pill"
                                Margin="8,0,0,0"
                                RelativePanel.RightOf="artistname"
                                Text="•" />

                            <TextBlock
                                Margin="8,0,0,0"
                                RelativePanel.RightOf="Pill"
                                TextTrimming="CharacterEllipsis">
                                <Hyperlink
                                    Click="Album_Click"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind Album, Mode=OneWay}" />
                                </Hyperlink>
                            </TextBlock>


                        </RelativePanel>
                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                            <Button
                                x:Name="PropsHover"
                                x:Uid="/Information/Props"
                                Width="36"
                                Height="36"
                                Padding="0"
                                Click="PropsHover_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xE104;" />
                            </Button>
                            <Button
                                x:Name="RemovefromPlaylist"
                                x:Uid="/Information/RemovePlaylist2"
                                Width="36"
                                Height="36"
                                Padding="0"
                                Click="RemovefromPlaylist_Click"
                                Style="{StaticResource TransparentButtonStyle}"
                                Visibility="{x:Bind IsFocused, Mode=OneWay}">
                                <FontIcon FontSize="16" Glyph="&#xECC9;" />
                            </Button>
                            <TextBlock
                                Margin="12"
                                VerticalAlignment="Center"
                                Text="{x:Bind Length, Converter={StaticResource TimeToStr}}"
                                Visibility="{x:Bind IsDurationVisible, Mode=OneWay, Converter={StaticResource BoolToVis}}" />
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>

</Page>
