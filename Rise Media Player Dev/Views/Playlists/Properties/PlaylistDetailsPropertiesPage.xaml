        <Border Style="{StaticResource SettingsCard}">
            <StackPanel Orientation="Vertical"
                        Padding="0,4,0,0"
                        Spacing="16">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="96" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="5">
                        <Image Height="96"
                               Stretch="UniformToFill"
                               Width="96"
                               x:Name="imgAlbum">
                            <Image.Source>
                                <BitmapImage UriSource="{x:Bind _plViewModel.Icon, Mode=OneWay}" />
                            </Image.Source>
                        </Image>
                    </Border>

                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                Spacing="8">
                        <TextBlock Text="{x:Bind _plViewModel.Title, Mode=OneWay}"
                                   FontSize="22"
                                   MaxLines="2"
                                   TextTrimming="WordEllipsis"
                                   Style="{StaticResource TitleTextBlockStyle}" />

                        <TextBlock Text="{x:Bind _plViewModel.Description, Mode=OneWay}"
                                   Margin="-1,-4,0,4"
                                   FontSize="14"
                                   TextTrimming="WordEllipsis"
                                   Style="{StaticResource BodyTextBlockStyle}" />

                        <muxc:SplitButton Name="EditPlaylistIcon" Click="EditPlaylistIcon_Click" >
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE104;" FontSize="16" />
                                <TextBlock x:Uid="/Details/EditPlaylist"
                                           Style="{StaticResource BodyTextBlockStyle}" />
                            </StackPanel>
                            <muxc:SplitButton.Flyout>
                                <MenuFlyout Placement="BottomEdgeAlignedRight">
                                    <MenuFlyoutItem Text="Export playlist icon" Name="exportPlaylistArt" Click="exportPlaylistArt_Click" >
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE159;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </muxc:SplitButton.Flyout>
                        </muxc:SplitButton>
                    </StackPanel>
                </Grid>

                <Rectangle Fill="{ThemeResource ExpanderHeaderBorderBrush}"
                           Height="1"
                           HorizontalAlignment="Stretch"
                           Margin="-16,0,-16,-8" />

                <Grid ColumnSpacing="12" RowSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                    </Grid.RowDefinitions>

                    <TextBlock x:Uid="/Details/PlaylistTitle"
                               Margin="0,-2,0,0"
                               VerticalAlignment="Center" />
                    <TextBlock x:Uid="/Details/PlaylistDescription"
                               Grid.Row="1"
                               Margin="0,-2,0,0"
                               VerticalAlignment="Center" />
                    

                    <TextBox x:Name="PlaylistTitle"
                             Grid.Column="1"
                             x:FieldModifier="public"
                             Text="{x:Bind _plViewModel.Title, Mode=OneWay}" />
                    <TextBox x:Name="PlaylistDescription"
                             x:FieldModifier="public"
                             Grid.Column="1"
                             Grid.Row="1"
                             Text="{x:Bind _plViewModel.Description, Mode=OneWay}" />
                    
                </Grid>
            </StackPanel>
        </Border>

