<Page
    x:Class="Rise.App.Views.SongDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Orientation="Vertical" Spacing="4">
        <uc:ExpanderControl
            x:Uid="/Details/AsFile"
            ExpanderStyle="Static"
            Icon="&#xE8B7;">
            <Button
                x:Name="LocalButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="LocalButton_Click">
                <Button.Content>
                    <FontIcon FontSize="16" Glyph="&#xE946;" />
                </Button.Content>
            </Button>
        </uc:ExpanderControl>

        <Border Style="{StaticResource SettingsCard}">
            <StackPanel
                Padding="0,4,0,0"
                Orientation="Vertical"
                Spacing="16">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="96" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="5">
                        <Image
                            x:Name="imgAlbum"
                            Width="96"
                            Height="96"
                            Stretch="UniformToFill">
                            <Image.Source>
                                <BitmapImage UriSource="{x:Bind Props.Thumbnail}" />
                            </Image.Source>
                        </Image>
                    </Border>

                    <StackPanel
                        Grid.Column="1"
                        Orientation="Vertical"
                        Spacing="8">
                        <TextBlock
                            Margin="4,0,0,0"
                            FontSize="22"
                            MaxLines="2"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind Props.Title}"
                            TextTrimming="WordEllipsis" />

                        <TextBlock
                            Margin="3,-4,0,4"
                            FontSize="14"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind Props.Artist}"
                            TextTrimming="WordEllipsis" />

                        <muxc:SplitButton Click="EditArtButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontSize="16" Glyph="&#xE104;" />
                                <TextBlock x:Uid="/Details/EditAlbum" Style="{StaticResource BodyTextBlockStyle}" />
                            </StackPanel>
                            <muxc:SplitButton.Flyout>
                                <MenuFlyout Placement="BottomEdgeAlignedRight">
                                    <MenuFlyoutItem
                                        Name="exportAlbumArt"
                                        Click="exportAlbumArt_Click"
                                        Text="Export album art">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE159;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </muxc:SplitButton.Flyout>
                        </muxc:SplitButton>
                    </StackPanel>
                </Grid>

                <Rectangle
                    Height="1"
                    Margin="-16,0,-16,-8"
                    HorizontalAlignment="Stretch"
                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                <Grid ColumnSpacing="12" RowSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="32" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Uid="/Details/SongTitle"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="/Details/SongArtist"
                        Grid.Row="1"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="/Details/SongAlbum"
                        Grid.Row="2"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="/Details/Track"
                        Grid.Row="3"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="/Details/Genre"
                        Grid.Row="4"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />
                    <TextBlock
                        x:Uid="/Details/Year"
                        Grid.Row="5"
                        Margin="0,-2,0,0"
                        VerticalAlignment="Center" />

                    <TextBox
                        x:Name="SongTitle"
                        Grid.Column="1"
                        Text="{x:Bind Props.Title, Mode=TwoWay}" />
                    <TextBox
                        x:Name="SongArtist"
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{x:Bind Props.Artist, Mode=TwoWay}" />
                    <TextBox
                        x:Name="SongAlbum"
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{x:Bind Props.Album, Mode=TwoWay}" />
                    <TextBox
                        x:Name="SongTrack"
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{x:Bind Props.Track, Mode=TwoWay}" />
                    <TextBox
                        x:Name="SongGenre"
                        Grid.Row="4"
                        Grid.Column="1"
                        Text="{x:Bind Props.Genres, Mode=TwoWay}" />
                    <TextBox
                        x:Name="SongYear"
                        Grid.Row="5"
                        Grid.Column="1"
                        Text="{x:Bind Props.Year, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource SettingsCard}">
            <Grid ColumnSpacing="12" RowSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>

                <TextBlock
                    x:Uid="/Details/SongAlbumArtist"
                    Margin="0,-2,0,0"
                    VerticalAlignment="Center" />
                <TextBlock
                    x:Uid="/Details/Disc"
                    Grid.Row="1"
                    Margin="0,-2,0,0"
                    VerticalAlignment="Center" />
                <TextBlock
                    x:Uid="/Details/Rating"
                    Grid.Row="2"
                    Margin="0,-2,0,0"
                    VerticalAlignment="Center" />

                <TextBox
                    x:Name="SongAlbumArtist"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    HorizontalAlignment="Stretch"
                    Text="{x:Bind Props.AlbumArtist, Mode=TwoWay}" />
                <TextBox
                    x:Name="SongDisc"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Text="{x:Bind Props.Disc, Mode=TwoWay}" />
                <RatingControl
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="16,0,0,-4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Value="{x:Bind Props.Rating, Mode=TwoWay}" />
            </Grid>
        </Border>

        <muxc:TeachingTip
            x:Name="LocalTip"
            x:Uid="/Details/Local"
            IsLightDismissEnabled="True"
            PreferredPlacement="Bottom"
            Target="{x:Bind LocalButton}" />
    </StackPanel>
</Page>
