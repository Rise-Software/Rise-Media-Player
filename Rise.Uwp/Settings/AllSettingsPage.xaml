<Page
    x:Class="Rise.App.Settings.AllSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:control="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App.Web"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            x:Name="BackButton"
            Width="40"
            Height="28"
            Margin="2,2,0,0"
            VerticalAlignment="Top"
            AutomationProperties.AutomationId="BackButton"
            AutomationProperties.ItemType="Navigation Button"
            AutomationProperties.Name="Back"
            Click="BackButton_Click"
            CornerRadius="5"
            Style="{StaticResource TransparentButtonStyle}"
            ToolTipService.ToolTip="Back">
            <muxc:AnimatedIcon
                x:Name="BackAnimatedIcon"
                Width="16"
                Height="16">
                <muxc:AnimatedIcon.Source>
                    <animatedvisuals:AnimatedBackVisualSource />
                </muxc:AnimatedIcon.Source>
                <muxc:AnimatedIcon.FallbackIconSource>
                    <muxc:SymbolIconSource Symbol="Back" />
                </muxc:AnimatedIcon.FallbackIconSource>
            </muxc:AnimatedIcon>
        </Button>

        <StackPanel Orientation="Horizontal">
            <FontIcon
                Width="20"
                Height="20"
                Margin="48,0,8,0"
                HorizontalAlignment="Left"
                FontSize="16"
                Glyph="&#xE713;" />



        </StackPanel>

        <uc:ExtendedTitleBar
            x:Name="TitleBar"
            Title="App settings"
            Margin="42,0,275,0"
            HorizontalAlignment="Stretch"
            FontSize="14"
            ShowIcon="False" />

        <Button
            x:Name="SyncButton"
            Width="40"
            Height="28"
            Margin="2,2,190,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            CornerRadius="5"
            IsEnabled="False"
            Style="{StaticResource TransparentButtonStyle}"
            ToolTipService.ToolTip="Sync centre">
            <Button.Flyout>
                <Flyout>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,2,0,12"
                                Style="{ThemeResource BaseTextBlockStyle}"
                                Text="Sync centre" />
                            <Button
                                Height="32"
                                Margin="70,-9,-2,0"
                                Content="Sync all"
                                FontSize="12"
                                FontStretch="Normal" />
                        </StackPanel>
                        <StackPanel Padding="25" Orientation="Vertical">
                            <FontIcon Height="32" Glyph="" />
                            <TextBlock
                                FontSize="14"
                                FontWeight="Normal"
                                Text="Coming soon"
                                TextAlignment="Center" />

                        </StackPanel>
                    </StackPanel>

                </Flyout>
            </Button.Flyout>
            <FontIcon FontSize="14" Glyph="" />
        </Button>

        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Border
                Width="301"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <StackPanel Margin="32,32,32,0">
                        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                FontSize="28"
                                FontWeight="SemiBold"
                                Text="Settings" />
                            <StackPanel
                                Margin="40,0,0,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    Height="36"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    ToolTipService.ToolTip="More">
                                    <FontIcon FontSize="16" Glyph="" />
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutSubItem Text="Settings menus">
                                                <MenuFlyoutSubItem.Icon>
                                                    <FontIcon Glyph="&#xE145;" />
                                                </MenuFlyoutSubItem.Icon>
                                                <muxc:RadioMenuFlyoutItem
                                                    IsChecked="True"
                                                    IsEnabled="False"
                                                    Text="Left" />
                                                <muxc:RadioMenuFlyoutItem
                                                    IsChecked="False"
                                                    IsEnabled="False"
                                                    Text="Top" />
                                            </MenuFlyoutSubItem>

                                            <MenuFlyoutSubItem Text="Header">
                                                <MenuFlyoutSubItem.Icon>
                                                    <FontIcon Glyph="&#xE185;" />
                                                </MenuFlyoutSubItem.Icon>
                                                <muxc:RadioMenuFlyoutItem
                                                    IsChecked="True"
                                                    IsEnabled="False"
                                                    Text="Left" />

                                                <muxc:RadioMenuFlyoutItem IsEnabled="False" Text="Centre" />

                                                <muxc:RadioMenuFlyoutItem IsEnabled="False" Text="Right" />
                                            </MenuFlyoutSubItem>

                                            <MenuFlyoutSubItem Text="Icons">
                                                <MenuFlyoutSubItem.Icon>
                                                    <FontIcon Glyph="&#xE91B;" />
                                                </MenuFlyoutSubItem.Icon>
                                                <muxc:RadioMenuFlyoutItem
                                                    IsChecked="True"
                                                    IsEnabled="False"
                                                    Text="High Contrast" />
                                                <muxc:RadioMenuFlyoutItem IsEnabled="False" Text="Fluent Colour" />
                                            </MenuFlyoutSubItem>

                                            <MenuFlyoutSeparator />

                                            <MenuFlyoutItem
                                                x:Name="Language"
                                                Click="Language_Click"
                                                Text="Language">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem
                                                x:Name="Insider"
                                                Click="Insider_Click"
                                                Text="Insider Hub">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xF1AD;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutSeparator />

                                            <MenuFlyoutItem
                                                x:Name="ClassicDialog"
                                                Click="ClassicDialog_Click"
                                                Text="Open classic dialog">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE17C;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                            <MenuFlyoutItem
                                                x:Name="RestoreDefaultSettings"
                                                IsEnabled="False"
                                                Text="Restore defaults">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon FontFamily="ms-appx:///Assets/SettingsIcons.ttf#Settings Fluent Icons" Glyph="&#xE359;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>

                                        </MenuFlyout>

                                    </Button.Flyout>
                                </Button>
                                <Button
                                    Name="FeedbackSettings"
                                    Height="36"
                                    HorizontalAlignment="Right"
                                    Click="FeedbackSettings_Click"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    ToolTipService.ToolTip="Feedback">
                                    <FontIcon FontSize="16" Glyph="" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <muxc:NavigationView
                        x:Name="SettingsSidebar"
                        Width="235"
                        Margin="32,76,32,30"
                        HorizontalAlignment="Left"
                        AlwaysShowHeader="False"
                        ExpandedModeThresholdWidth="500"
                        IsBackButtonVisible="Collapsed"
                        IsBackEnabled="False"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        IsTabStop="False"
                        IsTitleBarAutoPaddingEnabled="False"
                        ItemInvoked="SettingsSidebar_ItemInvoked"
                        PaneDisplayMode="Left"
                        SelectedItem="{x:Bind Appearance}"
                        SelectionChanged="SettingsSidebar_SelectionChanged"
                        SelectionFollowsFocus="Disabled">

                        <muxc:NavigationView.Resources>
                            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                        </muxc:NavigationView.Resources>

                        <muxc:NavigationView.MenuItems>
                            <muxc:NavigationViewItem
                                x:Name="Appearance"
                                Content="Appearance"
                                Tag="Appearance"
                                ToolTipService.ToolTip="Customise app colours, themes, icons, layouts and motion.">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="MediaLibrary"
                                Content="Media library"
                                Tag="MediaLibrary"
                                ToolTipService.ToolTip="Manage media sources, your online services and scanning settings.">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="Navigation"
                                Content="Navigation"
                                Tag="Navigation"
                                ToolTipService.ToolTip="Change click actions, startup options.">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="Playback"
                                Content="Playback &amp; sound"
                                Tag="Playback">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="Sync"
                                Content="Syncing"
                                Tag="Sync">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                        </muxc:NavigationView.MenuItems>

                        <muxc:NavigationView.PaneCustomContent>
                            <HyperlinkButton
                                x:Name="PaneHyperlink"
                                Margin="12,0"
                                Content="More info"
                                Visibility="Collapsed" />
                        </muxc:NavigationView.PaneCustomContent>

                        <muxc:NavigationView.AutoSuggestBox>
                            <AutoSuggestBox
                                Margin="-12,0,-12,0"
                                AutomationProperties.Name="Search"
                                PlaceholderText="Search"
                                QueryIcon="Find" />
                        </muxc:NavigationView.AutoSuggestBox>

                        <muxc:NavigationView.FooterMenuItems>
                            <muxc:NavigationViewItem
                                x:Name="Behaviour"
                                Content="System behaviours"
                                Tag="Behaviour">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xEC7A;" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="Components"
                                Content="Manage components"
                                Tag="Components">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                            <muxc:NavigationViewItem
                                x:Name="About"
                                Content="About"
                                Tag="About">
                                <muxc:NavigationViewItem.Icon>
                                    <FontIcon Glyph="" />
                                </muxc:NavigationViewItem.Icon>
                            </muxc:NavigationViewItem>
                        </muxc:NavigationView.FooterMenuItems>
                    </muxc:NavigationView>
                </Grid>

            </Border>

            <Border
                Margin="316,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <Grid Margin="0,37,0,0">
                    <StackPanel
                        x:Name="HeaderArea"
                        Padding="37,0,37,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        x:FieldModifier="public"
                        Orientation="Horizontal">
                        <Button
                            x:Name="GOBACKPAGE"
                            Height="36"
                            Margin="0,4,12,0"
                            Padding="8,4,8,4"
                            VerticalAlignment="Center"
                            x:FieldModifier="public"
                            AutomationProperties.AutomationId="BackButton1"
                            AutomationProperties.ItemType="Navigation Button"
                            AutomationProperties.Name="Back"
                            Click="GoBackAPage_Click"
                            CornerRadius="5"
                            Style="{StaticResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="Back"
                            Visibility="Collapsed">
                            <muxc:AnimatedIcon Width="20" Height="20">
                                <muxc:AnimatedIcon.Source>
                                    <animatedvisuals:AnimatedBackVisualSource />
                                </muxc:AnimatedIcon.Source>
                                <muxc:AnimatedIcon.FallbackIconSource>
                                    <muxc:SymbolIconSource Symbol="Back" />
                                </muxc:AnimatedIcon.FallbackIconSource>
                            </muxc:AnimatedIcon>
                        </Button>
                        <FontIcon
                            x:Name="MainSettingsHeaderIcon"
                            Margin="0,4,0,0"
                            x:FieldModifier="public"
                            FontSize="28"
                            Glyph="" />
                        <TextBlock
                            x:Name="MainSettingsHeader"
                            Margin="12,0,0,0"
                            x:FieldModifier="public"
                            FontSize="28"
                            FontWeight="SemiBold"
                            Text="No page selected"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="WrapWholeWords" />
                    </StackPanel>
                    <Grid>
                        <ScrollViewer
                            Margin="0,49,0,0"
                            Padding="37,0,37,0"
                            CornerRadius="8"
                            VerticalScrollBarVisibility="Auto">

                            <Frame
                                x:Name="SettingsMainFrame"
                                HorizontalAlignment="Stretch"
                                x:FieldModifier="public">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Opacity="0.6"
                                    Text="Select an item from the sidebar to continue."
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="WrapWholeWords" />
                                <Frame.ContentTransitions>
                                    <TransitionCollection>
                                        <NavigationThemeTransition />
                                    </TransitionCollection>
                                </Frame.ContentTransitions>
                            </Frame>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

        </Grid>

    </Grid>

</Page>
